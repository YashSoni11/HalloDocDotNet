            </select>
            <label for="floatingInput">Rows</label>
           
        </div>

    </div>
    <div class="col-2">

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end PageNumbers" style="column-gap:1rem;">
            <li class="page-item" onclick="GetFillteredTaskk(@Model.currentPages-1,true, @Model.totalPages)" style="cursor:pointer;"><i class="bi bi-chevron-left"></i></li>
            <li class="page-item text-white bg-success" style="padding-left: 1rem;padding-right: 1rem;cursor:pointer;">@Model.currentPages</li>
            <li class="page-item" onclick="GetFillteredTaskk(@Model.currentPages+1,true,@Model.totalPages)" style="cursor:pointer;"><i class="bi bi-chevron-right"></i></li>
