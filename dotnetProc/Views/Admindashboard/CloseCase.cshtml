@using HalloDoc_DAL.ViewModels;
@model HalloDoc_DAL.AdminViewModels.CLoseCase;

@{
    Layout = "_Layout";
}

<partial name="_DashNavbar" />

<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">
        <div class="d-flex col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 justify-content-between mb-3 mt-2">
            <h5>Close Case</h5>
            <a class="nav-link" asp-controller="Admindashboard" asp-action="DashBoard">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <div class="container-fluid  formContainer mb-5">


                <div class="row mt-3 justify-content-between">

                    <div class="col-6 d-flex justify-content-start flex-column p-4">

                        <p>Patient Name</p>

                        <div class="d-flex align-items-center">

                            <h3 class="text-info ">@Model.Firstname @Model.Lastname</h3>
                            <h6 class="mx-2">(@Model.ConfirmationNumber)</h6>
                        </div>



                    </div>
                    <div class="col-4 d-flex justify-content-end flex-column p-4">

                        <button type="button" class="btn btn-outline-info text-info lightInfo-btn ">
                            Create Invoice Through Quickbooks
                        </button>

                    </div>





                </div>
                <!-- Submit Buttons  -->

                <div class="row  p-3">
                    <div class="col-6">

                        <h4>Documnets</h4>
                    </div>


                </div>

                <div class="container-fluid">

                    @{
                        if (Model.ViewDocuments.Count == 0)
                        {
                            <div class="container-fluid" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;border-radius:12px;padding:2rem;align-items:center;">
                                <h3 class="text-info d-flex" style="justify-content:center;">No Documents Available!</h3>
                            </div>
                        }
                        else
                        {
                            <table class="table ">
                                <thead class="table-secondary">
                                    <tr>
                                        <th></th>
                                        <th scope="col">Upload Date <span>&uarr;</span></th>
                                        <th scope="col">Actions</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (ViewDocument doc in Model.ViewDocuments)
                                    {

                                        <tr>

                                            <td id="Docfiles" class="@doc.filename.Replace(" ","")" id="@doc.FileId">@doc.filename</td>
                                            <td>@doc.uploadDate</td>
                                            <td class="d-flex" style="column-gap:10px;">
                                                <a class="nav-link @doc.filename.Replace(" ","")" href="~/Upload/@doc.filename" download style="width:2rem;height:2rem;border:1px solid #0dcaf0;border-radius:5px;display:flex;justify-content:center;align-items:center;">
                                                    <i id='themeIcon' class="bi bi-cloud-upload text-info"></i>
                                                </a>

                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        }
                    }


                </div>


                <form method="post" asp-action="SaveCloseCaseData" asp-controller="Admindashboard" asp-route-requestId="@Model.requestId">
                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Patient Information</h4>
                        <div class="col-xl-6 col-sm-6 col-12">

                            <div class="form-floating mb-3">
                                <input asp-for="Firstname"
                                       type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com" disabled>
                                <label for="floatingInput">First Name</label>
                                <span asp-validation-for="Firstname" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Lastname" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com" disabled>
                                <label for="floatingInput">Last Name</label>
                                <span asp-validation-for="Lastname" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Birthdate" type="date" class="form-control BirthdateInp" id="floatingInput"
                                       placeholder="name@example.com" disabled>
                                <label for="floatingInput">Date Of Birth</label>
                                <span id="BirthdayError" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="col-xl-5 col-sm-5 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="Phone" style='height: 57px;' type="tel" id='phonInput' class="form-control tbDisabled"
                                       id="floatingInput">
                                <label for="floatingInput"></label>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-1 col-sm-2 col-2 d-flex  align-content-center">
                            <div class="form-floating mb-3 d-flex justify-content-center align-content-center">
                                <button type="button" class="btn btn-outline-info text-info lightInfo-btn " style="width:5rem;">
                                    <i id='themeIcon' class="bi bi-telephone text-info fs-4"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control emailInp tbDisabled" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button id="CloseFormSubmitBtn" type="submit" style="display:none;" hidden></button>
                </form>
                <div class="row justify-content-end p-3">
                  
                    <div class="d-flex col-4 justify-content-end" style="column-gap: 1rem;">
                        <button type="button" class="btn btn-info  text-white darkInfo-btn editBtn" onclick="editDetails()">Edit</button>
                        <button type="button" class="btn btn-info  text-white darkInfo-btn editMode" style="display:none;" onclick="$('#CloseFormSubmitBtn').click()">Save</button>
                        <button type="button" class="btn btn-outline-info text-info lightInfo-btn editMode" style="display:none;" onclick="cancleEdit()">
                            Cancle
                        </button>
                        <form method="post" asp-action="PostCloseCase" asp-controller="Admindashboard" asp-route-requestId="@Model.requestId">
                          <button type="submit" class="btn btn-outline-info text-info lightInfo-btn">
                            Close Case
                          </button>
                        </form>
                    </div>
                </div>



            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $(".tbDisabled").attr("disabled", "true")

        toastr.remove();
        if ('@TempData["ShowPositiveNotification"]' != '') {
            toastr.success('@TempData["ShowPositiveNotification"]');
        }
        else if ('@TempData["ShowNegativeNotification"]' != '') {
            toastr.error('@TempData["ShowNegativeNotification"]')
        }
    })

</script>