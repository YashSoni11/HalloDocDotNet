
@{
    Layout = "_Layout";
}






@model HalloDoc_DAL.AdminViewModels.AdminProfile;

@{
    string[] statusArray = { "Active", "Dactive" };
}

<partial name="_DashNavbar" />
<partial name="_Dashtabs" />

<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">
        <div class="d-flex col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 justify-content-between  mb-3 mt-2">
            <h3>My Profile</h3>
            <a class="nav-link" asp-controller="Admindashboard" asp-action="Dashboard">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">
            <form asp-action="ResetAdminPassword" asp-controller="Admindashboard" id="resetForm" method="post">
                <input hidden id="HiddenadminpassInp" value="" name="AdminPassword" />
            </form>

                <div class="container-fluid  formContainer mb-5" style="padding:1rem;">

            <form asp-action="SaveAdminAccountInformation" asp-controller="Admindashboard" method="post">

                    <!-- Family/Frineds Information Input Group -->


                    <div class="row mt-3">
                        <h4 class="mb-3 mt-3">Account Information</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="accountInfo.Username" type="text" class="form-control tbDisabled" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Username</label>
                                <span asp-validation-for="accountInfo.Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="accountInfo.Password" type="text" class="form-control" id="AdminPassInp"
                                       placeholder="name@example.com">
                                <label for="AdminPassInp">Password</label>
                                @* <span asp-validation-for="FamilyFriendsIfo.LastName" class="text-danger"></span> *@

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="accountInfo.Status" value="@statusArray[(int)Model.accountInfo.Status-1]" class="form-select form-control tbDisabled" id="floatingInput" aria-label="Default select example">
                                    <option value="1">Active</option>
                                    <option value="2">Dactive</option>
                                </select>
                                <label for="floatingInput">Status</label>
                                 <span asp-validation-for="accountInfo.Status" class="text-danger"></span> 

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="accountInfo.Role" value="Role" class="form-select tbDisabled form-control" aria-label="Default select example">
                                    @foreach(Role role in Model.accountInfo.roles)
                                    {
                                    <option value="@role.Name">@role.Name</option>                                    
                                    }
                                </select>
                                <label for="floatingInput">Role</label>
                                 <span asp-validation-for="accountInfo.Role" class="text-danger"></span> 

                            </div>
                        </div>

                        <div class="col-12 d-flex justify-content-end" >
                            <button type="button"
                                    class="btn btn-outline-info text-info lightInfo-btn" onclick="ResetAdminPassword('HiddenadminpassInp')">
                                Reset Password
                            </button>
                        </div>
                        
                    </div>
          
                    <!-- Patient Information Input Group -->

                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Administrator Information</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="accountInfo.Firstname" class="form-control tbDisabled" placeholder="Leave a comment here"
                                          id="floatingTextarea2" ></input>
                                <label for="floatingTextarea2">Firstname</label>
                                 <span asp-validation-for="accountInfo.Firstname" class="text-danger"></span> 
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="accountInfo.Lastname" type="text" class="form-control tbDisabled" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                                 <span asp-validation-for="accountInfo.Lastname" class="text-danger"></span> 
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="accountInfo.Email" type="text" class="form-control tbDisabled" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Email</label>
                                 <span asp-validation-for="accountInfo.Email" class="text-danger"></span> 

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="accountInfo.Confirmationemail" type="text" class="form-control tbDisabled" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Confirmation Email</label>
                                 <span asp-validation-for="accountInfo.Confirmationemail" class="text-danger"></span> 

                            </div>
                        </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3 phoneInputDiv">
                            <input asp-for="accountInfo.Phone" style='height: 57px;' type="tel" id='phonInput' class="form-control tbDisabled"
                                   id="floatingInput">
                            <label for="floatingInput"></label>
                             <span asp-validation-for="accountInfo.Phone" class="text-danger"></span> 
                        </div>
                    </div>

                    <div id="RegionChekboxdiv" class="col-xl-6 col-sm-6 col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                               District of Columbia
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                New York
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Virgnia
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                               Maryland
                            </label>
                        </div>
                    </div>

                    </div>



                   

                    <div class="col-12 d-flex justify-content-end" style="column-gap:1rem;">
                        <button type="button" class="btn btn-info  text-white darkInfo-btn editBtn" onclick="editDetails()">Edit</button>
                        <button type="submit" class="btn btn-info  text-white darkInfo-btn editMode" style="display:none;" onclick="()">Save</button>
                        <button type="button" class="btn btn-outline-info text-info lightInfo-btn editMode" style="display:none;" onclick="cancleEdit()">
                            Cancle
                        </button>
                    </div>
                </form>
                    <!-- Patient Contact Information Input Group -->
                <form asp-action="SaveMailingAndBillingInformation" asp-controller="Admindashboard" method="post">

                    <div class="row mt-3">
                        <h4 class="mb-3">Mailing & Billing Information</h4>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="mailingAndBillingInfo.Address1" type="text" class="form-control emailInp tbDisabled1" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Address1</label>
                                 <span asp-validation-for="mailingAndBillingInfo.Address1" class="text-danger"></span> 
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="mailingAndBillingInfo.Address2" type="text" class="form-control emailInp tbDisabled1" id="floatingInput"
                                       placeholder="name@example.com" >
                                <label for="floatingInput">Address2</label>
                                @* <span asp-validation-for="PatientInfo.Email" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="mailingAndBillingInfo.City" type="text" class="form-control tbDisabled1" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                 <span asp-validation-for="mailingAndBillingInfo.City" class="text-danger"></span> 

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="mailingAndBillingInfo.State" class="form-select tbDisabled1 form-control" aria-label="Default select example" style="height:3rem;padding:13px;">
                                    @foreach(Region region in Model.mailingAndBillingInfo.regions)
                                    {
                                    <option value="@region.Name">@region.Name</option>
                                }
                                  
                                </select>
                                 <span asp-validation-for="mailingAndBillingInfo.State" class="text-danger"></span> 
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="mailingAndBillingInfo.Zip" type="number" class="form-control tbDisabled1" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                                @* <span asp-validation-for="patientLocation.ZipCode" class="text-danger"></span> *@

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="mailingAndBillingInfo.AltPhone" style='height: 57px;' type="tel" id='phonInput' class="form-control tbDisabled1"
                                       id="floatingInput">
                                <label for="floatingInput"></label>
                                @* <span asp-validation-for="PatientInfo.Phonenumber" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-end" style="column-gap:1rem;">
                            <button type="button" class="btn btn-info  text-white darkInfo-btn editBtn1" onclick="editDetails1()">Edit</button>
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn editMode1" style="display:none;" onclick="()">Save</button>
                            <button type="button" class="btn btn-outline-info text-info lightInfo-btn editMode1" style="display:none;" onclick="cancleEdit1()">
                                Cancle
                            </button>
                        </div>


                    </div>
</form>
@*
                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>
                            <button type="submit"
                                    class="btn btn-outline-info text-info lightInfo-btn">
                                Cancel
                            </button>
                        </div>
                    </div>*@

                </div>
            
        </div>

    </div>
</div>



@section Scripts{

    @{

        <partial name="_ValidationScriptsPartial" />
    }
}

<script>
    $(".reg-nav").remove();


    $(document).ready(function () {

        handleNavChange('admin-profile-tab')
    $(".tbDisabled").attr("disabled", "true")
    $(".tbDisabled1").attr("disabled", "true")


        if ('@TempData["ShowPositiveNotification"]' != '') {
            toastr.remove();
            toastr.success('@TempData["ShowPositiveNotification"]');
        } else if ('@TempData["ShowNegativeNotification"]' != '') {
            toastr.remove();
            toastr.error('@TempData["ShowNegativeNotification"]')
        }
    })



    const ResetAdminPassword = (id) =>{


        var passwordValue = $("#AdminPassInp").val();

        if(passwordValue == ''){
             toastr.error("Please Enter Password!");
             return;
        }

        $(`#${id}`).val(passwordValue);

        $("#resetForm").submit();


    }

</script>