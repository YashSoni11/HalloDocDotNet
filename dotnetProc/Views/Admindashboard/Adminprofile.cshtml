
@{
    Layout = "_Layout";
}






@model HalloDoc_DAL.Models.Admin;



<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">
        <div class="d-flex col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 justify-content-between  mb-3 mt-2">
            <h3>My Profile</h3>
            <a class="nav-link" asp-controller="Home" asp-action="PatientRequest">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="FormByFamily" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div class="container-fluid  formContainer mb-5">


                    <!-- Family/Frineds Information Input Group -->


                    <div class="row mt-3">
                        <h4 class="mb-3 mt-3">Account Information</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Firstname" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Username</label>
                                @* <span asp-validation-for="FamilyFriendsIfo.FirstName" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input  type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Password</label>
                                @* <span asp-validation-for="FamilyFriendsIfo.LastName" class="text-danger"></span> *@

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="Status" class="form-select" id="floatingInput" aria-label="Default select example">
                                    <option value="1">Active</option>
                                    <option value="2">Deactive</option>
                                </select>
                                <label for="floatingInput">Status</label>
                                @* <span asp-validation-for="FamilyFriendsIfo.PhoneNumber" class="text-danger"></span> *@

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="Roleid" class="form-select" aria-label="Default select example" >
                                    <option value="1">Master Admin</option>
                                    <option value="2">Admin</option>
                                </select>
                                <label for="floatingInput">Role</label>
                                @* <span asp-validation-for="FamilyFriendsIfo.Email" class="text-danger"></span> *@

                            </div>
                        </div>
                        
                    </div>

                    <!-- Patient Information Input Group -->

                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Administrator Information</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Firstname" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" ></input>
                                <label for="floatingTextarea2">Firstname</label>
                                @* <span asp-validation-for="PatientInfo.Symptoms" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Lastname" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                                @* <span asp-validation-for="PatientInfo.FirstName" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Email</label>
                                @* <span asp-validation-for="PatientInfo.LastName" class="text-danger"></span> *@

                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Confirmation Email</label>
                                @* <span asp-validation-for="PatientInfo.BirthDate" class="text-danger"></span> *@

                            </div>
                        </div>
                    </div>

                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3 phoneInputDiv">
                            <input asp-for="Altphone" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                   id="floatingInput">
                            <label for="floatingInput"></label>
                            @* <span asp-validation-for="PatientInfo.Phonenumber" class="text-danger"></span> *@
                        </div>
                    </div>

                    <!-- Patient Contact Information Input Group -->

                    <div class="row mt-3">
                        <h4 class="mb-3">Mailing & Billing Information</h4>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Address1" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Address1</label>
                                @* <span asp-validation-for="PatientInfo.Email" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Address2" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com" >
                                <label for="floatingInput">Address2</label>
                                @* <span asp-validation-for="PatientInfo.Email" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="City" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                @* <span asp-validation-for="patientLocation.City" class="text-danger"></span> *@

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="Regionid" class="form-select" aria-label="Default select example" style="height:3rem;padding:13px;">
                                    <option value="1">Gujarat</option>
                                    <option value="2">Maharastra</option>
                                    <option value="3">Punjab</option>
                                </select>
                                @* <span asp-validation-for="patientLocation.State" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Zip" type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                                @* <span asp-validation-for="patientLocation.ZipCode" class="text-danger"></span> *@

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="Altphone" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                       id="floatingInput">
                                <label for="floatingInput"></label>
                                @* <span asp-validation-for="PatientInfo.Phonenumber" class="text-danger"></span> *@
                            </div>
                        </div>

                    </div>

                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>
                            <button type="submit"
                                    class="btn btn-outline-info text-info lightInfo-btn">
                                Cancel
                            </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script>
    $(".reg-nav").remove();
</script>