@using HalloDoc_DAL.Models;
@model HalloDoc_DAL.AdminViewModels.AdminAssignCase;

<form method="post" id="AssignCaseForm" asp-action="PostAssignCase" asp-controller="Admindashboard" asp-route-requestId="@Model.RequestId">
    <div class="modal fade" id="AssignCasePopUp" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" id="CancleCaseContent">
                <div class="modal-header bg-info">
                    <h1 class="modal-title fs-5 text-white" id="staticBackdropLabel">Assign Request</h1>
                    <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body container-fluid ">

                    <p>To assign this request search and select another physician</p>


                    <div class="row  justify-content-center" style="column-gap:1rem;">

                        <div class="col-12">
                            <div class="form-floating mb-3">

                                <select id="sl" asp-for="SelectedRegionName" class="form-select form-control" aria-label="Default select example" onchange="GetPhysicianByRegions()">
                                    <option value="0" selected="">All Region</option>
                                    @foreach (Region region in Model.Regions)
                                    {
                                        <option value="@region.Regionid">@region.Name</option>
                                    }

                                </select>
                                <label for="sl">Narrow Search By Regions</label>
                                <span asp-validation-for="SelectedRegionName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">

                                <select id="PhysicianInp" asp-for="SelectedPhycisianId" class="form-select form-control" aria-label="Default select example">

                                    @foreach (Physician physician in Model.Physicians)
                                    {
                                        <option value="@physician.Physicianid">@physician.Firstname @physician.Lastname</option>
                                    }

                                </select>
                                <label for="PhysicianInp">Physicians</label>
                                <span asp-validation-for="SelectedPhycisianId" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Description" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Provide Additional Notes</label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>

                    <button type="button" class="btn btn-outline-info lightInfo-btn"
                            onclick="document.getElementById('AssignCaseForm').reset()">
                        Cancle
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>


