@{
    Layout = "_Layout";

}



@model HalloDoc_DAL.AdminViewModels.Order;


<partial name="_DashNavbar" />


<partial name="_Dashtabs" />


<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">
        <div class="d-flex col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 justify-content-between mb-3 mt-2">
            <h2>Send Order</h2>
            <a class="nav-link" asp-controller="Admindashboard" asp-action="Dashboard">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form id="OrderForm" asp-action="PostOrder" asp-controller="Admindashboard" method="post"  asp-route-id="@Model.RequestId">
                <div class="container-fluid  formContainer mb-5 p-4">


                    <!-- Family/Frineds Information Input Group -->


                    <div class="row mt-3">       
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select id="ProfessionInp"  asp-for="Profession" class="form-select" id="floatingSelect" aria-label="Floating label select example" onclick="GetVendors(event.target)">                           
                                    @foreach (Healthprofessionaltype hp in Model.healthprofessionaltypes)
                                    {
                                        <option value="@hp.Healthprofessionalid">@hp.Professionname</option>

                                    }
                                </select>
                                <label for="floatingSelect">Select Profession</label>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select id="BusinessInp" asp-for="Business" class="form-selectform-control" id="floatingSelect" aria-label="Floating label select example" onclick="GetVendorDetails()">
                                   
                                </select>
                                <label for="floatingInput">Business</label>
                                <span asp-validation-for="Business" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input id="BusinessContact" asp-for="BusinessContact" type="tel" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Business contact</label>
                                <span asp-validation-for="BusinessContact" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input id="VendorEmail" asp-for="Email" type="email" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input id="VendorFax" asp-for="FaxNumber" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Fax Number</label>
                                <span asp-validation-for="FaxNumber" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Prescription" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Prescription or Order details</label>
                                <span asp-validation-for="Prescription" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating">
                                <select asp-for="RefillNumber" class="form-select form-control" id="floatingSelect" aria-label="Floating label select example">

                                    <option value="1" selected>1</option>
                                   <option value="5">5</option>
                                   <option value="10">10</option>
                                </select>
                                <label for="floatingSelect">Number Of Refill</label>
                                <span asp-validation-for="RefillNumber" class="text-danger"></span>

                            </div>
                        </div>
                    </div>


                    <!-- Submit Buttons  -->

                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>
                            <button type="button"
                                    class="btn btn-outline-info text-info lightInfo-btn" onclick="(() => document.getElementById('OrderForm').reset())()">
                                Cancel
                            </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script>

    $(document).ready(function(){


        let prevId = localStorage.getItem("ActiveLink")

        let currEle = document.getElementById(prevId)

        currEle.classList.add("active");
          
    })


    
      
</script>