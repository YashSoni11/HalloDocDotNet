

@model HalloDoc_DAL.AdminViewModels.AdminCancleCase;

<form id="CancleCaseForm" mthod="post" asp-action="PostCancleRequest" asp-controller="Admindashboard" asp-route-requestId="@Model.requestId">
<div class="modal fade" id="CancleCaseModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="CancleCaseContent">
            <div class="modal-header bg-info">
                <h1 class="modal-title fs-5 text-white" id="staticBackdropLabel">Cancle Case</h1>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal"  aria-label="Close"></button>
            </div>
            <div class="modal-body container-fluid ">

                <p>Patient Name : @Model.PatientName </p>


                <div class="row  justify-content-center" style="column-gap:1rem;">

                   <div class="col-12">
                     <div class="form-floating mb-3">
                                <select id="reasonSelector" asp-for="Reason" class="form-select form-control" aria-label="Floating label select example">
                                    @foreach (Casetag casetag in Model.reasons)
                                    {
                                        <option value="@casetag.Name">@casetag.Name</option>

                                    }
                                </select>
                                <label for="reasonSelector">Reason For Cancelation</label>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                      </div>
                   </div>

                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="AdditionalNotes"  class="form-control" placeholder="Leave a comment here"
                                      id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Provide Additional Notes</label>
                                <span asp-validation-for="AdditionalNotes" class="text-danger"></span>

                            </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-info  text-white darkInfo-btn" >Confirm</button>

                <button type="button" class="btn btn-outline-info lightInfo-btn"
                            onclick="document.getElementById('CancleCaseForm').reset();">
                    Cancle
                </button>
            </div>
        </div>
    </div>
</div>
 </form>


