


@{
    Layout = "_Layout";
}

@model HalloDoc_DAL.AdminViewModels.PatientReqByAdmin;

<partial name="_DashNavbar"/>
<partial name="_Dashtabs"/>

<partial name="_RegionModal" />

<div class="container-fluid mt-3">
    <div class="row justify-content-center">

        <div class="d-flex col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 justify-content-between  mb-3 mt-2">
            <h3>Submit Request</h3>
            <a asp-controller="Admindashboard" asp-action="Dashboard" class="nav-link">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="PatientFormByAdmin" asp-controller="Admindashboard" method="post">
                <div class="container-fluid formContainer mb-5">
                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Patient</h4>
                     

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName"
                                       type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input asp-for="BirthDate" type="date" class="form-control BirthdateInp" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Date Of Birth</label>
                                <span id="BirthdayError" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="Phonenumber" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                       id="floatingInput" onblur="checkPhoneNumberAvailibility()">
                                <label for="floatingInput"></label>
                                <span asp-validation-for="Phonenumber" class="text-danger"></span>
                                @{
                                    if (TempData["IsPhoneBlocked"] != null)
                                    {

                                        <span class="text-danger">@TempData["IsPhoneBlocked"]</span>

                                    }
                                }

                            </div>
                        </div>
                    </div>


                    <div class="row mt-3">
                        <h4 class="mb-3">Location</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.Street" type="text" class="form-control" id="street"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Street</label>
                                <span asp-validation-for="Location.Street" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.City" type="text" class="form-control" id="city"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                <span asp-validation-for="Location.City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">

                                <input asp-for="Location.State" type="text" class="form-control" id="state"
                                       placeholder="name@example.com">
                                <label for="floatingInput">State</label>
                                <span asp-validation-for="Location.State" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.ZipCode" type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                              

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.RoomNo" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Room #/ Suite (optional)</label>


                            </div>
                        </div>

                        <div class="col-xl-2 col-sm-4 col-6 d-flex  align-content-center">
                            <div class="form-floating mb-3 d-flex justify-content-center align-content-center">
                                <button type="button" class="btn btn-outline-info text-info lightInfo-btn " style="width:6rem;" onclick="chekcRegionAvailibility()">
                                   Verify
                                </button>
                            </div>
                        </div>
                        <div class="col-xl-2 col-sm-4 col-6 d-flex  align-content-center">
                            <div class="form-floating mb-3 d-flex justify-content-center align-content-center">
                                <button type="button" class="btn btn-outline-info text-info lightInfo-btn " style="width:6rem;" onclick="showLocation()">
                                    <i id='themeIcon' class="bi bi-geo-alt text-info fs-3"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Notes" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Admin Notes(optional)</label>
                               
                            </div>
                        </div>

                    </div>

                 

                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>

                            <a asp-action="Dashboard" asp-controller="Admindashboard" class="btn btn-outline-info text-info lightInfo-btn">
                                Cancle
                            </a>
                        </div>
                    </div>

                </div>
            </form>






        </div>

    </div>
</div>

@section Scripts{
            

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


