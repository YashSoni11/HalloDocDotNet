
<form method="post" asp-action="TransferToAdmin" asp-controller="ProviderDashboard" asp-route-id="@Model">


    <div class="modal fade" id="TransferToAdminModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" id="CancleCaseContent">
                <div class="modal-header bg-info">
                    <h1 class="modal-title fs-5 text-white" id="staticBackdropLabel">Request To Transfer</h1>
                    <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body container-fluid ">

                    <p>This request will be transferred to admin </p>


                    <div class="row  justify-content-center" style="column-gap:1rem;">
                        <input id="TransferToAdminModalRequestId" name="RequestId" hidden style="display:none;"/>


                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea name="Message" required class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 115px"></textarea>
                                <label for="floatingTextarea2">Description</label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>

                    <button type="button" data-bs-dismiss="modal" class="btn btn-outline-info lightInfo-btn">

                        Cancle
                    </button>
                </div>
            </div>
        </div>
    </div>

</form>