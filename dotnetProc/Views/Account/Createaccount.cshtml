@{
    Layout = "_Layout";
}




@model HalloDoc_DAL.ViewModels.UserCred;




<div class="backgroundImg">
    <img src="~/images/login.jpg" />
</div>


<div class="container-fluid">

    <div class="row">

        <div class="d-flex col-12 loginContainer flex-column">

            <div class="mt-3 container-fluid">
                <div class="row h-50 justify-content-between">
                    <div class="col-4"></div>
                    <div class="col-3 h-100">
                        <img style="height: 7rem" class='img-fluid' src="~/images/trans_logo.png" alt="">
                    </div>
                    <div class="d-flex col-3 justify-content-end h-100">
                        <button style="width: 3rem; height: 3rem;" type="button" class="btn btn-outline-info lightInfo-btn "
                                onclick="changeTheme()">
                            <i id='themeIcon' class="bi bi-moon text-info"></i>
                        </button>
                    </div>
                </div>
            </div>


            <div class="d-flex col-12 flex-column align-items-center mt-5" style=" row-gap: 2rem;">
                <h3> Create Account </h3>
            </div>


            <div class="container-fluid mt-5">
                <div class="row justify-content-center">
                    <div class="col-xl-4 col-lg-6 col-md-7 col-sm-9 col-10">
                        <form asp-action="Createaccount" method="POST">
                            <div id="iuu" class="d-flex form-floating mb-3 bg-transparent" \ style="border:1px solid #d7d7d7; border-radius: 4px;">
                                <input type="email" asp-for="Email" class="form-control  bg-transparent border-0 emailInput " id="floatingInput"
                                       placeholder="name@example.com" onfocus="dofocus('iuu')" onblur="doblur('iuu')">
                                <label id="userLabel" for="floatingInput">Email address </label>
                                <span class="" id="userLabelIcon"><i class='fs-3 bi bi-person' style="color: var( --pi-label-color);"></i></span>
                            </div>
                            <div id='yvy' class="d-flex form-floating bg-transparent">
                                <input type="password" asp-for="Password" class="form-control bg-transparent" id="floatingPassword"
                                       placeholder="Password">
                                <label id='passLabel' for="floatingPassword">Password</label>
                            </div>
                            <div class="d-flex form-floating bg-transparent mt-3">
                                <input type="password" asp-for="Confirmpassword" class="form-control bg-transparent" id="floatingPassword"
                                       placeholder="Password">
                                <label id='passLabel' for="floatingPassword">Confirmpassword</label>
                            </div>

                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["Error"];
                                </div>
                            }
                            <button style='width: 100%;' type="submit" class="btn btn-info mt-3 text-white">Create</button>
                        </form>
                    </div>
                </div>
            </div>



            <footer class="container-fluid footerLinksContainer">
                <span>Terms and Conditions</span>
                <span>|</span>
                <span>Privacy Policy</span>
            </footer>
        </div>

    </div>


</div>


