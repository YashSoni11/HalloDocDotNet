@{
    Layout = "_NavBar";
}

@using HalloDoc_DAL.ViewModels;
@model List<HalloDoc_DAL.ViewModels.ViewDocument>;


<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">
        <div class="d-flex col-8 justify-content-end  mb-3 mt-2">
            <a class="nav-link" asp-controller="Home" asp-action="PatientRequest">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="FormByFamily" asp-controller="Account" method="post"  enctype="multipart/form-data">
                <div class="container-fluid  formContainer mb-5">


                
                    <!-- File Upload Input Group -->

                    <div class="row mt-3">

                        <div class="col-12 d-flex justify-content-start flex-column p-4">

                            <p>Patient Name</p>

                         <div class="d-flex align-items-center" >

                             <h3 class="text-info ">Tester</h3>
                              <h6 class="mx-2">(MD9878978)</h6>
                         </div>

                        <p>Check here for any files that you or the doctors of your subsequents requestors have attached for you to review. </p>

                        </div>


                        @*<h4 class="mb-3">(Optional) Upload Photo Or Document</h4>*@




                        <div class="col-12 ">
                            <div class="input-group mb-3">


                                <input type="file"  class="form-control" id="inputGroupFile02" onchange="uploadFile()">

                                <label class="input-group-text bg-info text-white" for="inputGroupFile02">
                                    <i class='bi bi-cloud-upload text-white mx-1'></i>Upload
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Buttons  -->

                    <div class="row  p-3">
                        <div class="col-6">
                           
                            <h4>Documnets</h4>
                        </div>
                        <div class=" d-flex col-6 justify-content-end">
                            <button type="submit"
                                    class="btn btn-outline-info text-info lightInfo-btn">
                               Download All
                            </button>
                        </div>
                        
                    </div>


                    <div class="container-fluid">

                        <table class="table ">
                            <thead class="table-secondary">
                                <tr>
                                    <th scope="col"> <input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" disabled></th>
                                    <th>Name</th>
                                    <th scope="col">Uploader</th>
                                    <th scope="col">Upload Date <span>&uarr;</span></th>
                                    <th scope="col">Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach ( ViewDocument doc in Model)
                                {
                                    <tr>
                                        <th scope="row"><input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" ></th>
                                        <td>@doc.filename</td>
                                        <td>@doc.uploader</td>
                                        <td>@doc.uploadDate</td>
                                        <td>
                                            <a class="nav-link" download="" href="~/Upload/(@doc.filename)" style="width:2rem;height:2rem;border:1px solid #0dcaf0;border-radius:5px;display:flex;justify-content:center;align-items:center;">
                                                <i id='themeIcon' class="bi bi-cloud-upload text-info"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </form>
        </div>

    </div>
</div>






