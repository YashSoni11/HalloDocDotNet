@{
    Layout = "_Layout";
}


@model HalloDoc_DAL.ViewModels.UserInformation;



<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h1 class="modal-title fs-5 text-white" id="staticBackdropLabel">Create New Request</h1>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body  ">

                <p>Here, I Want to create new request for...</p>


                <div class="d-flex  justify-content-center" style="column-gap:1rem;">


                   @* <a asp-controller="Home" asp-action="PatientForm" class="nav-link">*@
                    <button type="button" id="me" class="btn btn-info  text-white darkInfo-btn" onclick="setUrl('/Account/DashBoard/PatientForm','me')">Me</button>

                    @*</a>*@

                    <a asp-controller="Home" asp-action="FormForOthers" class="nav-link">

                    <button id="Other" type="button" class="btn btn-outline-info lightInfo-btn"
                                onclick="setUrl('/Account/DashBoard/FormForOthers','Other')">
                        Some One Else
                    </button>
                    </a>

                </div>
                
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-info  text-white darkInfo-btn">Continue</button>

                <button type="button" class="btn btn-outline-info lightInfo-btn"
                        onclick="">
                   Close
                </button>
            </div>
        </div>
    </div>
</div>







<nav class="navbar" style="box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;">
    <div class="container-fluid">

        

      

        <img class="img-fluid"  style="height: 5rem;" src="~/images/trans_logo.png" />
  


        <div class="col-7 d-flex justify-content-end align-items-center" style="column-gap:2rem;" >

        <h6>Welcome,@TempData["UserName"]</h6>
        <button  type="button" class="btn btn-outline-info lightInfo-btn"
                onclick="">
            Logout
        </button>
        <button style="width: 3rem; height: 3rem;" type="button" class="btn btn-outline-info lightInfo-btn "
                onclick="changeTheme()">
            <i id='themeIcon' class="bi bi-moon text-info"></i>
        </button>

        </div>
       
    </div>
</nav>











<nav class="p-3">
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active tab-btn " id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Dashboard</button>
        <button class="nav-link tab-btn" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Profile</button>
    </div>
</nav>


<div class="tab-content mt-5 " id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">

        <h3 class="container-fluid text-dark">Medical History</h3>


        <div class="container-fluid d-flex justify-content-end p-3" style="box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;">

            <button type="button" class="btn btn-outline-info lightInfo-btn"
                    data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop">
                Create New Request
            </button>

</div>



  <div class="container-fluid">

        <table class="table mt-5">
            <thead class="table-secondary">
                <tr>                   
                    <th scope="col">Created Date</th>
                    <th scope="col">Current Status</th>
                    <th scope="col">Documents</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (Request request in Model.UserRequests)
                    {
                    <tr>
                    <th scope="row">@request.Createddate.ToString("MMM dd, yyyy")</th>
                    <td>@request.Status</td>
                            <td>
                                <button type="button" class="btn btn-outline-info lightInfo-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#staticBackdrop">
                                    Documents
                                </button>
                            </td>
                </tr>
                        
                    }
            </tbody>
        </table>

  </div>


 

    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
        
        
        
        
        
        <div class="container-fluid mt-3">
            <div class="row justify-content-center">

                <div class="d-flex col-4   mb-3 mt-2">
                   <h2>User Profile</h2>
                </div>

                <div class="d-flex col-4 justify-content-end  mb-3 mt-2">
                    <a asp-controller="Home" asp-action="PatientRequest" class="nav-link">
                        <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                            <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                        </button>
                    </a>
                </div>
                <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


                    <form  asp-controller="Account" asp-action="DashBoard" method="post">


                        <div class="container-fluid formContainer mb-5">
                            <div class="row mt-3">
                                <h4 class="mt-3 mb-3">Generel Information </h4>
                                <div class="col-xl-6 col-sm-6 col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="@Model.User.Firstname" type="text" class="form-control tbDisabled " id="floatingInput"
                                               placeholder="name@example.com">
                                        <label for="floatingInput">First Name</label>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-sm-6 col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="@Model.User.Firstname" value="@Model.User.Firstname" type="text" class="form-control tbDisabled" id="floatingInput"
                                               placeholder="name@example.com">
                                        <label for="floatingInput">Last Name</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating mb-3">
                                        <input type="date" class="form-control tbDisabled" id="floatingInput"
                                               placeholder="name@example.com">
                                        <label for="floatingInput">Date Of Birth</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <h4 class="mb-3">Contact Information</h4>

                                <div class="col-xl-2 col-sm-3 col-6">
                                    <div class="form-floating mb-3">
                                        <select class="form-select form-select-sm" aria-label="Small select example">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="col-xl-4 col-sm-5 col-6">
                                    <div class="form-floating mb-3 phoneInputDiv">
                                        <input style='height: 57px;' type="tel" id='phonInput' class="form-control tbDisabled"
                                               id="floatingInput">
                                        <label for="floatingInput"></label>
                                    </div>
                                </div>
                                <div class="col-xl-5 col-sm-5 col-12">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control emailInp tbDisabled" id="floatingInput"
                                               placeholder="name@example.com" onblur="checkEmailAvailibility()">
                                        <label for="floatingInput">Email</label>
                                    </div>
                                </div>


                            </div>

                            <div class="row mt-3">
                                <h4 class="mb-3">Location Information</h4>
                                <div class="col-xl-6 col-sm-6 col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control tbDisabled" id="floatingInput"
                                               placeholder="name@example.com">
                                        <label for="floatingInput">Street</label>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-sm-6 col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control tbDisabled" id="floatingInput"
                                               placeholder="name@example.com">
                                        <label for="floatingInput">City</label>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-sm-6 col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control tbDisabled" id="floatingInput"
                                               placeholder="name@example.com">
                                        <label for="floatingInput">State</label>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-6 col-12">
                                    <div class="form-floating mb-3">
                                        <input type="number" class="form-control tbDisabled" id="floatingInput"
                                               placeholder="name@example.com">
                                        <label for="floatingInput">Zip Code</label>
                                    </div>
                                </div>
 
                            </div>

                            <div class="row justify-content-end p-3">
                                <div class="d-flex col-4 justify-content-end" style="column-gap: 1rem;">
                                    <button type="button" class="btn btn-info  text-white darkInfo-btn editBtn" onclick="editDetails()">Edit</button>
                                    <button type="submit" class="btn btn-info  text-white darkInfo-btn editMode" style="display:none;" onclick="()">Save</button>
                                    <button type="button" class="btn btn-outline-info text-info lightInfo-btn editMode" style="display:none;" onclick="cancleEdit()">
                                        Cancle
                                    </button>
                                </div>
                            </div>

                        </div>
                       
                    </form>
                   






                </div>

            </div>
        </div>
        
        
        
        
        
        
     </div>
</div>




<footer class="patientSubmitFooter" style="position: relative;">
    <span>Terms and Conditions</span>
    <span>|</span>
    <span>Privacy Policy</span>
</footer>

<script>

    $(document).ready(function(){
          
         $(".tbDisabled").attr("disabled","true")
    })
      

    const editDetails = () => {
        console.log("iuhio")
        $(".tbDisabled").removeAttr("disabled");
        $(".editMode").css("display","block");
        $(".editBtn").css("display", "none");


    }
   
    const cancleEdit = () =>{
         
        $(".editBtn").css("display", "block");
        $(".editMode").css("display", "none");
        $(".tbDisabled").attr("disabled", "true")

    }


   
 

</script>




