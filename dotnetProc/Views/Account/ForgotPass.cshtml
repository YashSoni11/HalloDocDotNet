

@{
    Layout = "_Layout";
}


@model HalloDoc_DAL.ViewModels.UserEmail;


<div class="backgroundImg">
    <img style='z-index: -100;' src="~/images/login.jpg" />
</div>


<div class="container-fluid">

    <div class="row">

        <div class="d-flex col-12 loginContainer flex-column">

            <div class="mt-3 container-fluid">
                <div class="row h-50 justify-content-between">
                    <div class="col-4"></div>
                    <div class="col-3 h-100">
                        <img class='img-fluid h-100' src="images/Screenshot 2024-01-17 105144.png" alt="">
                    </div>
                    <div class="d-flex col-3 justify-content-end h-100">
                        <button style="width: 3rem; height: 3rem;" type="button" class="btn btn-outline-info lightInfo-btn "
                                onclick="changeTheme()">
                            <i id='themeIcon' class="bi bi-moon text-info"></i>
                        </button>

                    </div>
                </div>
            </div>




            <div class="d-flex col-12 flex-column align-items-center " style="margin-top: 8rem;">
                <h3> Reset Your Password </h3>
            </div>


            <div class="container-fluid mt-5">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-5 col-md-4">
                        <form asp-action="ForgotPass" method="post">
                            <div class="d-flex form-floating mb-3 bg-transparent" style="border:1px solid #d7d7d7; border-radius: 4px;">
                                <input type="email" asp-for="Email" class="form-control  bg-transparent border-0 emailInput " id="resetEmail"
                                       placeholder="name@example.com"/>
                                <label id="userLabel" for="floatingInput">Username</label>
                                <span class="" id="userLabelIcon"><i class='fs-3 bi bi-person' style="color: var( --pi-label-color);"></i></span>
                            </div>

                            <button style='width: 100%;' type="submit" class="btn btn-info mt-3 text-white">Send Reset Password Link</button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="d-flex container-fluid mt-3 justify-content-center align-items-center">
                <i class="bi bi-chevron-left text-info"></i>
                <a class='nav-link text-info fs-5' asp-controller="Account" asp-action="Login">Back To Login</a>
            </div>



            <footer class="container-fluid  footerLinksContainer">
                <span>Terms and Conditions</span>
                <span>|</span>
                <span>Privacy Policy</span>
            </footer>
        </div>

    </div>


</div>

