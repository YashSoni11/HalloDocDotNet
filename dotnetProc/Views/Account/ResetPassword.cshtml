



@{
    Layout = "_Layout";
}

@model HalloDoc_DAL.ViewModels.ForgotPassword;


<div class="backgroundImg">
    <img src="~/images/login.jpg" />
</div>


<div class="container-fluid">

    <div class="row">

        <div class="d-flex col-12 loginContainer flex-column">

            <div class="mt-3 container-fluid">
                <div class="row h-50 justify-content-between">
                    <div class="col-4"></div>
                    <div class="col-3 h-100">
                        <img style="height: 7rem" class='img-fluid' src="~/images/trans_logo.png" alt="">
                    </div>
                    <div class="d-flex col-3 justify-content-end h-100">
                        <button style="width: 3rem; height: 3rem;" type="button" class="btn btn-outline-info lightInfo-btn "
                                onclick="changeTheme()">
                            <i id='themeIcon' class="bi bi-moon text-info"></i>
                        </button>
                    </div>
                </div>
            </div>


            <div class="d-flex col-12 flex-column align-items-center mt-5" style=" row-gap: 2rem;">
                <h3> Reset Your Password </h3>
            </div>


            <div class="container-fluid mt-5">
                <div class="row justify-content-center">
                    <div class="col-xl-4 col-lg-6 col-md-7 col-sm-9 col-10">
                        <form asp-action="ResetPassword" method="POST">
                            <div  class="d-flex form-floating mb-3 bg-transparent">
                                <input type="password" asp-for="NewPassword" class="form-control  bg-transparent" id="floatingInput"
                                       placeholder="name@example.com">
                                <label id="userLabel" for="floatingInput">New Password</label>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="d-flex form-floating bg-transparent">
                                <input type="password" asp-for="ConfirmPassword" placeholder="oii" class="form-control bg-transparent" id="floatingPassword">
                                <label id='passLabel' for="floatingPassword">Confirm New Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            @if (TempData["ErrorPassword"] != null)
                            {
                                <div class="alert alert-danger mt-5" role="alert">
                                    @TempData["ErrorPassword"];
                                </div>
                            }
                            <button style='width: 100%;' type="submit" class="btn btn-info mt-3 text-white">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>




            <footer class="container-fluid footerLinksContainer">
                <span>Terms and Conditions</span>
                <span>|</span>
                <span>Privacy Policy</span>
            </footer>
        </div>

    </div>


</div>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}