@model HalloDoc_DAL.ProviderViewModels.SearchRecordsForm;
@using HalloDoc_DAL.AdminViewModels;




@{
    Layout = "_Layout";
}

<partial name="_DashNavbar" />


<partial name="_Dashtabs" />

<div class="container-fluid mt-3">
    <div class="row justify-content-center">


        <div class="d-flex col-xl-10 col-lg-11 col-md-12 col-sm-12 col-12 justify-content-between">
            <h3>Search Records</h3>
            <button class="btn btn-outline-info text-info lightInfo-btn" onclick="()">
                <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Export Data To Excel
            </button>
        </div>


        <div class="col-xl-10 col-lg-11 col-md-12 col-sm-12 col-12 mt-3 ProviderMenuHeader">

            <form>
            <div class="row  p-sm-3 p-3" style="row-gap:1rem;align-items: center;background:var(--pi-form-back-color);border-radius:10px 10px 0px 0px;">

                <div class="col-lg-3 col-sm-10">

                    <div class="form-floating">

                            <select asp-for="requestStatus" class="form-select form-control" id="sr-status" aria-label="Floating label select example" style="background-color:var(--pi-back-color);" onclick="GetProvidersByRegion('1',false)">
                            <option value="0">All Region</option>

                           @* @foreach (Region region in Model.regions)
                            {
                                <option value="@region.Regionid">@region.Name</option>
                            }*@
                        </select>
                        <label for="ProviderRegionSelector">Select Request Status</label>
                    </div>

                </div>

                    <div class="col-lg-3 col-sm-10">
                        <div class="form-floating ">
                            <input asp-for="Patientname" type="text" class="form-control" id="sr-patientName"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Patient Name</label>
                            <span  class="text-danger"></span>
                        </div>
                    </div>

                <div class="col-lg-3 col-sm-10">

                    <div class="form-floating">

                            <select asp-for="RequestType" class="form-select form-control" id="sr-requestType" aria-label="Floating label select example" style="background-color:var(--pi-back-color);" onclick="GetProvidersByRegion('1',false)">
                            <option value="0">All Types</option>
                            <option value="1">Patient</option>
                            <option value="2">Family</option>
                            <option value="2">Conciearge</option>
                            <option value="4">Business</option>

                        
                        </select>
                        <label for="ProviderRegionSelector">Select Request Type</label>
                    </div>

                </div>

                <div class="col-lg-3 col-sm-10">
                    <div class="form-floating ">
                            <input asp-for="FromDateOfServive" type="date" class="form-control" id="sr-FromDate"
                               placeholder="name@example.com">
                        <label for="floatingInput">From Date Of Service</label>
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-10">
                    <div class="form-floating ">
                            <input asp-for="ToDateOfService" type="date" class="form-control" id="sr-ToDate"
                               placeholder="name@example.com">
                        <label for="floatingInput">To Date Of Service</label>
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-10">
                    <div class="form-floating ">
                            <input asp-for="ProviderName" type="text" class="form-control" id="sr-ProviderName"
                               placeholder="name@example.com">
                        <label for="floatingInput">Provider Name</label>
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-10">
                    <div class="form-floating ">
                            <input asp-for="Email" type="email" class="form-control" id="sr-Email"
                               placeholder="name@example.com">
                        <label for="floatingInput">Email</label>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-10">
                    <div class="form-floating ">
                            <input asp-for="PhoneNumber" type="text" class="form-control" id="sr-phoneNumber"
                               placeholder="name@example.com">
                        <label for="floatingInput">Phonenumber</label>
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-end" style="column-gap:1rem;" >

                        <button type="reset" class="btn btn-outline-info text-info lightInfo-btn" onclick="()">
                       Clear 
                    </button>
                    <button  type="button" class="btn btn-info  text-white darkInfo-btn "  onclick="GetSearchRecordsTableView()">Search</button>

                </div>

            </div>



            </form>


        </div>

    </div>


    <div class="row" style="justify-content:center">
        <div id="SearchRecordsTableContainer" class="col-xl-10 col-lg-11 col-md-12 col-sm-12 col-12 justify-content-between p-0">


            @*<partial name="_ProviderTable"/>*@


        </div>


     



    </div>

</div>



<script>

    $(document).ready(function () {

        //handleNavChange('provider-menu-tab')
       GetSearchRecordsTableView();

        toastr.remove();
        if ('@TempData["ShowPositiveNotification"]' != '') {

            toastr.success('@TempData["ShowPositiveNotification"]');
        }
        else if ('@TempData["ShowNegativeNotification"]' != '') {
            toastr.error('@TempData["ShowNegativeNotification"]')
        }
    })








</script>