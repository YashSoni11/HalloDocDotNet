@model List<HalloDoc_DAL.ProviderViewModels.RequestedShiftDetails>


@{

    string[] status = { "Active", "Pending", "deactive" };
    <form id="RequestShiftTableForm" asp-action="ApproveShiftAction" asp-controller="Provider" method="post">





        <table class="table ReqtableContainer table-responsive">
            <thead>
                <tr style="background-color:#f1f1f1;">
                    <th class="reqtableHeader" scope="col"><input class="form-check-input" type="checkbox"></th>
                    <th class="reqtableHeader" scope="col">Staff <span>&uarr;</span></th>
                    <th class="reqtableHeader" scope="col">Day</th>
                    <th class="reqtableHeader" scope="col">Time</th>
                    <th class="reqtableHeader" scope="col">Region</th>
                    
                </tr>
            </thead>
            <tbody style="color: var(--pi-label-color);background: var(--pi-form-back-color);">

                @for(int i = 0; i < Model.Count; i++)
                {
                    <tr>

                        <input asp-for="@Model[i].ShiftDetailId" style="display:none;" hidden />
                        <th><input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox"> </th>
                        <th>@Model[i].PhysicianName</th>
                        <th>@Model[i].Day.ToString("MMM d,yyyy")</th>
                        <th>@Model[i].StartTime.ToString("h:mm tt") - @Model[i].EndTime.ToString("h:mm tt")</th>
                        <th>@Model[i].Region</th>
                    </tr>
                }

            </tbody>

        </table>



        




    </form>

}


