@model HalloDoc_DAL.ProviderViewModels.CreateProviderAccount;

@{
    Layout = "_Layout";
}



@{
    string[] statusArray = { "Active", "Dactive" };
}

<partial name="_DashNavbar" />
<partial name="_Dashtabs" />

<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">
        <div class="d-flex col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 justify-content-between  mb-3 mt-2">
            <h3>Create Provider Account</h3>
            <a class="nav-link" asp-controller="Admindashboard" asp-action="Dashboard">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">
        <form method="post" asp-action="CreateProviderAccount" asp-controller="Provider">

            <div class="container-fluid  formContainer " style="padding:1rem;">


                <!-- Family/Frineds Information Input Group -->


                <div class="row">
                    <h4 class="mb-3 mt-3">Account Information</h4>
                    <div class="col-xl-4 col-sm-4 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" type="text" class="form-control tbDisabled" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Username</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-4 col-sm-4 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="text" class="form-control" id="AdminPassInp"
                                   placeholder="name@example.com">
                            <label for="AdminPassInp">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-xl-4 col-sm-4 col-12">
                        <div class="form-floating mb-3">
                            <select asp-for="Role" class="form-select tbDisabled form-control" aria-label="Default select example">
                                @foreach (Role role in Model.roles)
                                {
                                    <option value="@role.Name">@role.Name</option>
                                }
                            </select>
                            <label for="floatingInput">Role</label>
                            <span asp-validation-for="Role" class="text-danger"></span>

                        </div>
                    </div>

                </div>

                <!-- Patient Information Input Group -->

                <div class="row mt-3">
                    <h4 class="mt-3 mb-3">Administrator Information</h4>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" class="form-control tbDisabled" placeholder="Leave a comment here"
                                   id="floatingTextarea2"></input>
                            <label for="floatingTextarea2">Firstname</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" type="text" class="form-control tbDisabled" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="text" class="form-control tbDisabled" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3 phoneInputDiv">
                            <input asp-for="Phone" style='height: 57px;' type="tel" id='phonInput' class="form-control tbDisabled"
                                   id="floatingInput">
                            <label for="floatingInput"></label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="MedicalLicenseNumber" type="text" class="form-control tbDisabled" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Medical License</label>
                            <span asp-validation-for="MedicalLicenseNumber" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="NPINumber" type="text" class="form-control tbDisabled" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">NPI Number</label>
                            <span asp-validation-for="NPINumber" class="text-danger"></span>

                        </div>
                    </div>
                    <div id="RegionChekboxdiv" class="col-xl-6 col-sm-6 col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                District of Columbia
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                New York
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Virgnia
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Maryland
                            </label>
                        </div>
                    </div>

                </div>


                <!-- Patient Contact Information Input Group -->


                <div class="row mt-5">
                    <h4 class="mb-3">Mailing & Billing Information</h4>

                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Address1" type="text" class="form-control emailInp tbDisabled1" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Address1</label>
                            <span asp-validation-for="Address1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Address2" type="text" class="form-control emailInp tbDisabled1" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Address2</label>
                            @* <span asp-validation-for="PatientInfo.Email" class="text-danger"></span> *@
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="City" type="text" class="form-control tbDisabled1" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <select asp-for="StateId" class="form-select tbDisabled1 form-control" aria-label="Default select example">
                               

                                @foreach (Region region in Model.Regions)
                                {                   
                                        <option value="@region.Regionid">@region.Name</option>
                                }

                            </select>
                            <label for="floatingInput">Region</label>

                            <span asp-validation-for="StateId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Zip" type="number" class="form-control tbDisabled1" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Zip Code</label>
                             <span asp-validation-for="Zip" class="text-danger"></span> 

                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3 phoneInputDiv">
                            <input asp-for="AltPhone" style='height: 57px;' type="tel" id='phonInput' class="form-control tbDisabled1"
                                   id="floatingInput">
                            <label for="floatingInput"></label>
                             @*<span asp-validation-for="PatientInfo.Phonenumber" class="text-danger"></span> *@
                        </div>
                    </div>


                </div>


                <div class="row mt-4">
                    <h4 class="mb-3">Provider Profile</h4>

                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="BusinessName" type="text" class="form-control emailInp tbDisabled1" id="floatingInput"
                                   placeholder="name@example.com">
                            <label for="floatingInput">Businessname</label>
                            <span asp-validation-for="BusinessName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="BusinessWebsite" type="text" class="form-control emailInp tbDisabled1" id="floatingInput"
                                   placeholder="name@example.com">
                                <label for="floatingInput">BusinessWebsite</label>
                            <span asp-validation-for="BusinessWebsite" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 col-12 ">
                        <div class="input-group mb-3">
                            <input asp-for="Photo" type="file" class="form-control" id="inputGroupFile01" placeholder="Select Photo">
                            <label class="input-group-text bg-info text-white" for="inputGroupFile01">
                                <i class='bi bi-cloud-upload text-white mx-1'></i>Upload
                            </label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="AdminNotes" class="form-control tbDisabled3" placeholder="Leave a comment here"
                                      id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Admin Notes(optional)</label>

                        </div>
                    </div>

                </div>
                <div class="border-bottom border-3 mb-3 mt-3"></div>

                <div class="row mt-3">

                    <h5>Onboarding</h5>

                    <div class="row my-1">
                        <div class="wrapper d-flex">
                            <div class="col-1 m-1">
                                <input type="checkbox" style="height:20px;width:20px" class="btn-outline-info" />
                            </div>
                            <div class="col-4">
                                <span>Independent Contract Agreement</span>
                            </div>
                            <div class="col-2">
                                <button type="button" class="btn btn-info  text-white darkInfo-btn" onclick="()">Upload</button>
                            </div>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="wrapper d-flex">
                            <div class="col-1 m-1">
                                <input type="checkbox" style="height:20px;width:20px" class="btn-outline-info" />
                            </div>
                            <div class="col-4">
                                <span>Background Check</span>
                            </div>
                            <div class="col-2">
                                <button type="button" class="btn btn-info  text-white darkInfo-btn" onclick="()">Upload</button>
                            </div>

                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="wrapper d-flex">
                            <div class="col-1 m-1">
                                <input type="checkbox" style="height:20px;width:20px" class="btn-outline-info" />
                            </div>
                            <div class="col-4">
                                <span>HIPAA Compliance</span>
                            </div>
                            <div class="col-2">
                                <button type="button" class="btn btn-info  text-white darkInfo-btn" onclick="()">Upload</button>
                            </div>

                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="wrapper d-flex">
                            <div class="col-1 m-1">
                                <input type="checkbox" style="height:20px;width:20px" class="btn-outline-info" />
                            </div>
                            <div class="col-4">
                                <span>Non-Disclosure Agreement</span>
                            </div>
                            <div class="col-2">
                                <button type="button" class="btn btn-info  text-white darkInfo-btn" onclick="()">Upload</button>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="border-bottom border-3 mt-3 mb-3"></div>


                <div class="row justify-content-end p-3">
                    <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                        <button type="submit" class="btn btn-success  text-white darkInfo-btn">Create Account</button>

                    </div>
                </div>

            </div>
        </form>

        </div>

    </div>
</div>


@section Scripts{

    @{

        <partial name="_ValidationScriptsPartial" />
    }
}
<script>


    $(document).ready(function () {


        let prevId = localStorage.getItem("ActiveLink")

        let currEle = document.getElementById(prevId)

        currEle.classList.add("active");
        toastr.remove();

        if ('@TempData["ShowPositiveNotification"]' != '') {
            toastr.success('@TempData["ShowPositiveNotification"]');
        } else if ('@TempData["ShowNegativeNotification"]' != '') {
            toastr.error('@TempData["ShowNegativeNotification"]')
        }
    })
</script>