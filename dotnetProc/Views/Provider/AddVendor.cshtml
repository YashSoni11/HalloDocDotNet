@model HalloDoc_DAL.ProviderViewModels.VendorDetails;

@{
    Layout = "_Layout";
}

<partial name="_DashNavbar" />


<partial name="_Dashtabs" />



<div class="container-fluid mt-3">
    <div class="row justify-content-center">

        <div class="d-flex col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 justify-content-between  mb-3 mt-2">
            <h3>Add Business</h3>
            <a asp-controller="Provider" asp-action="GetVendorsView" class="nav-link">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="AddVendor" method="post" asp-controller="Provider">
                <div class="container-fluid formContainer mb-5">
                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Submit Information</h4>



                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="BusinessName"
                                       type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Business Name</label>
                                <span asp-validation-for="BusinessName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">

                                <select asp-for="ProfessionId" class="form-select form-control" aria-label="Default select example">
                                  
                                    @foreach (Healthprofessionaltype healthprofessionaltype in Model.healthprofessionaltypes)
                                    {
                                        
                                            <option value="@healthprofessionaltype.Healthprofessionalid">@healthprofessionaltype.Professionname</option>

                                        

                                    }
                                </select>
                                <label for="floatingInput">Profession</label>
                                <span asp-validation-for="ProfessionId" class="text-danger"></span>


                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FaxNumber" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Fax Number</label>
                                <span asp-validation-for="FaxNumber" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="PhoneNumber" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                       id="floatingInput" onblur="checkPhoneNumberAvailibility()">
                                <label for="floatingInput"></label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com" onblur="checkEmailAvailibility()">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="BusinessContact" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">BusinessContact</label>
                                <span asp-validation-for="BusinessContact" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Street" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Street</label>
                                <span asp-validation-for="Street" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="City" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                <span asp-validation-for="City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">

                                <select id="regionInp" asp-for="regionId" class="form-select form-control" aria-label="Default select example">
                                   
                                    @foreach (Region region in Model.regions)
                                    {
                                       
                                            <option value="@region.Regionid">@region.Name</option>

                                        

                                    }

                                </select>
                                <label for="floatingInput">State</label>

                                <span asp-validation-for="regionId" class="text-danger"></span>


                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="ZipCode" type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                                <span asp-validation-for="ZipCode" class="text-danger"></span>

                            </div>
                        </div>
                    </div>





                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn">Save</button>
                            <button type="button" class="btn btn-outline-info text-info lightInfo-btn" onclick="window.location.reload() ">
                                Cancle
                            </button>
                        </div>
                    </div>

                </div>
            </form>






        </div>

    </div>
</div>

@section Scripts{


    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script>

    $(document).ready(function () {

        //handleNavChange('pills-partners-tab')


        toastr.remove();
        if ('@TempData["ShowPositiveNotification"]' != '') {

            toastr.success('@TempData["ShowPositiveNotification"]');
        }
        else if ('@TempData["ShowNegativeNotification"]' != '') {
            toastr.error('@TempData["ShowNegativeNotification"]')
        }
    })






</script>

