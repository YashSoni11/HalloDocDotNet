@model HalloDoc_DAL.ViewModels.PatientReq;

@{
    Layout = "NavAndFooter";
}



<partial name="_RegionModal"/>

<div class="container-fluid mt-3">
    <div class="row justify-content-center">

        <div class="d-flex col-8 justify-content-end  mb-3 mt-2">
            <a asp-controller="Home" asp-action="PatientRequest"  class="nav-link">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="FormByPatient" method="post" enctype="multipart/form-data" >
                <div class="container-fluid formContainer mb-5">
                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Patient Information</h4>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Symptoms" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Enter Brief Details of symptoms(optional)</label>
                                <span class="text-danger">@Html.ValidationMessageFor(q=>q.Symptoms)</span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName"
                                type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input asp-for="BirthDate" type="date" class="form-control BirthdateInp" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Date Of Birth</label>
                                <span   id="BirthdayError" class="text-danger"></span>

                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Contact Information</h4>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com" onblur="checkEmailAvailibility()">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                @{
                                    if (TempData["IsEmailExist"] != null)
                                    {

                                            <span class="text-danger">@TempData["IsEmailExist"]</span>

                                    }
                                }
                            </div>
                        </div>
                
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="Phonenumber" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                       id="floatingInput" onblur="checkPhoneNumberAvailibility()">
                                <label for="floatingInput"></label>
                                <span asp-validation-for="Phonenumber" class="text-danger"></span>
                                @{
                                    if (TempData["IsPhoneBlocked"] != null)
                                    {

                                        <span class="text-danger">@TempData["IsPhoneBlocked"]</span>

                                    }
                                }

                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 col-12 passFields" style="display:none;">
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 col-12 passFields" style="display:none;">
                            <div class="form-floating mb-3 ">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            </div>
                        </div>

                    </div>

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Location</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.Street" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Street</label>
                                <span asp-validation-for="Location.Street" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.City" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                <span asp-validation-for="Location.City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">

                                <select id="regionInp" asp-for="Location.State" class="form-select" aria-label="Default select example" style="height:3rem;padding:13px;" onblur="chekcRegionAvailibility()">
                                    <option selected="">Region</option>
                                    <option value="Gujarat">Gujarat</option>
                                    <option value="Maharastra">Maharastra</option>
                                    <option value="Punjab">Punjab</option>
                                </select>
                                @*<input asp-for="Location.State" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">State</label>*@
                                <span asp-validation-for="Location.State" class="text-danger"></span>
                                @{
                                    if (TempData["IsRegionAvailable"] != null)
                                    {

                                        <span class="text-danger">@TempData["IsRegionAvailable"]</span>

                                    }
                                }

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.ZipCode"  type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                                <span asp-validation-for="Location.ZipCode" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.RoomNo" type="text"  class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Room #/ Suite (optional)</label>
                                

                            </div>
                        </div>

                        

                        @if (TempData["ErrorP"] != null)
                        {
                            <h1>iug</h1>
                            <div class="col-12 alert alert-danger" role="alert">
                                @TempData["ErrorP"];
                            </div>
                        }

                    </div>

                    <div class="row mt-3">
                        <h4 class="mb-3">(Optional) Upload Photo Or Document</h4>
                        <div class="col-12 ">
                            <div class="input-group mb-3">

                                <input type="file" asp-for="FileUpload" class="form-control" id="inputGroupFile02">
                                <label class="input-group-text bg-info text-white" for="inputGroupFile02">
                                    <i class='bi bi-cloud-upload text-white mx-1'></i>Upload
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn" >Submit</button>
                            <button type="button" class="btn btn-outline-info text-info lightInfo-btn" onclick="window.location.reload() ">
                                Cancle
                            </button>
                        </div>
                    </div>

                </div>
            </form>






        </div>

    </div>
</div>

@section Scripts{

     @{<partial name="_ValidationScriptsPartial"/>}
}

<script>
    console.log(3)


    $(".reg-nav").remove();

  const ValidateForm = () =>{
       
    

        let birthdate = $('.BirthdateInp').val()

       

        let currenttime = new Date().toISOString().split('T')[0]
      
        if(birthdate == null || birthdate>currenttime){
            console.log(09)


           document.getElementById('BirthdayError').textContent = "Please Enter Valid Birthdate"

            return;
        }
        
    }

    const checkEmailAvailibility = () => {


        var email = $(".emailInp").val();
        if(email == '')
        return;
    

        $.ajax({

            url: "/Home/ckeckEmailAvailibility",
            method: "post",
            data: { email: email },
            success: function (response) {

                console.log(response)

                if (response.isEmailBLocked) {
                    $("#AlertModalContent").text(response.modalMsg)
                    $(".passFields").css("display", "none")
                    $("#regionModalBtn").click();
                }

                if (response.code == 401) {
                    $(".passFields").css("display", "none")

                    toastr.warning(response.error)
                }
                else if (response.code == 402) {

                    $(".passFields").css("display", "block")
                }



            },
            error: function () {
                console.log(2, email);
            }

        })



    }


    const checkPhoneNumberAvailibility = () => {


        let phoneNumber = $("#phonInput").val();
     console.log(098)
        if (phoneNumber == "") {
            return;
        }


        $.ajax({

            url: "/Home/CheckNumberAvailibility",
            method: "post",
            data: { Phone: phoneNumber },
            success: function (response) {
                console.log(response)
                if (response.isPhone == true) {

                    $("#AlertModalContent").text(response.modalMsg)

                    $("#regionModalBtn").click();
                }
            },
            error: function () {
                console.log(2, email);
            }

        })

    }


    const chekcRegionAvailibility = () =>{


        let region = $("#regionInp").val();
        console.log(region)
        if(region == "Region"){
          return;
        }


        $.ajax({

            url: "/Home/CheckRegionAvailibility",
            method: "post",
            data: { region: region },
            success: function (response) {
                console.log(response)
                if(response.response == false){
                  
                    $("#AlertModalContent").text(response.modalMsg)

                    $("#regionModalBtn").click();
                }
            },
            error: function () {
                console.log(2, email);
            }

        })

    }



</script>

