


@{
    Layout = "NavAndFooter";
}

@model HalloDoc_DAL.ViewModels.FamilyFriendModel;



<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">
        <div class="d-flex col-8 justify-content-end  mb-3 mt-2">
            <a class="nav-link" asp-controller="Home" asp-action="PatientRequest">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="FormByFamily" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div class="container-fluid  formContainer mb-5">


                    <!-- Family/Frineds Information Input Group -->


                    <div class="row mt-3">
                        <h4 class="mb-3 mt-3">Family/Frineds Information</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FamilyFriendsIfo.FirstName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Your First Name</label>
                                <span asp-validation-for="FamilyFriendsIfo.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FamilyFriendsIfo.LastName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Your Last Name</label>
                                <span asp-validation-for="FamilyFriendsIfo.LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FamilyFriendsIfo.PhoneNumber" type="tel" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Phone</label>
                                <span asp-validation-for="FamilyFriendsIfo.PhoneNumber" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FamilyFriendsIfo.Email" type="email" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Your Email</label>
                                <span asp-validation-for="FamilyFriendsIfo.Email" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select id="sl" asp-for="Relation" class="form-control form-select tbDisabled" aria-label="Default select example">
                                    <option value="Family" selected>Family</option>
                                    <option value="Conciearge">Conciearge</option>
                                    <option value="Business">Business</option>
                                   

                                </select>
                                <label for="floatingInput">Relation With Patient</label>
                                <span asp-validation-for="Relation" class="text-danger"></span>

                            </div>
                        </div>
                    </div>

                    <!-- Patient Information Input Group -->

                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Patient Information</h4>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea asp-for="PatientInfo.Symptoms" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Enter Brief Details of symptoms(optional)</label>
                                <span asp-validation-for="PatientInfo.Symptoms" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.FirstName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">First Name</label>
                                <span asp-validation-for="PatientInfo.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.LastName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                                <span asp-validation-for="PatientInfo.LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.BirthDate" type="date" class="form-control" id="myDateInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Date Of Birth</label>
                                <span asp-validation-for="PatientInfo.BirthDate" class="text-danger"></span>

                            </div>
                        </div>
                    </div>


                    <!-- Patient Contact Information Input Group -->

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Contact Information</h4>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.Email" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com" onblur="checkEmailAvailibility(event.target)">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="PatientInfo.Email" class="text-danger"></span>
                               
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="PatientInfo.Phonenumber" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                       id="floatingInput" onblur="checkPhoneNumberAvailibility()">
                                <label for="floatingInput"></label>
                                <span asp-validation-for="PatientInfo.Phonenumber" class="text-danger"></span>
                               
                            </div>
                        </div>

                    </div>

                    <!-- Patient Location Input Group -->

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Location</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.Location.Street" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Street</label>
                                <span asp-validation-for="PatientInfo.Location.Street" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.Location.City" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                <span asp-validation-for="PatientInfo.Location.City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="PatientInfo.Location.State" class="form-select" aria-label="Default select example" style="height:3rem;padding:13px;" onchange="chekcRegionAvailibility()">
                                    @for (int i = 0; i < Model.PatientInfo.regions.Count; i++)
                                    {
                                        <option value="@Model.PatientInfo.regions[i].Regionid">@Model.PatientInfo.regions[i].Name</option>
                                    }
                                </select>
                                <span asp-validation-for="PatientInfo.Location.State" class="text-danger"></span>
                                
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.Location.ZipCode" type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                                <span asp-validation-for="PatientInfo.Location.ZipCode" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientInfo.Location.RoomNo" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Room #/ Suite (optional)</label>
                            </div>
                        </div>
                    </div>

                    <!-- File Upload Input Group -->

                    <div class="row mt-3">
                        <h4 class="mb-3">(Optional) Upload Photo Or Document</h4>
                        <div class="col-12 ">
                            <div class="input-group mb-3">


                                <input type="file"  asp-for="PatientInfo.FileUpload" class="form-control" id="inputGroupFile02">

                                <label class="input-group-text bg-info text-white" for="inputGroupFile02">
                                    <i class='bi bi-cloud-upload text-white mx-1'></i>Upload
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Buttons  -->

                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>
                            <button type="reset"
                                    class="btn btn-outline-info text-info lightInfo-btn">
                                Cancel
                            </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

  <script>


    $(document).ready(function () {

        var currentDate = new Date().toISOString().split('T')[0];


        document.getElementById('myDateInput').setAttribute('max', currentDate);
           $(".reg-nav").remove();
    toastr.remove();
    if ('@TempData["ShowPositiveNotification"]' != '') {

        toastr.success('@TempData["ShowPositiveNotification"]');
    }
    else if ('@TempData["ShowNegativeNotification"]' != '') {
        toastr.error('@TempData["ShowNegativeNotification"]')
    }
    })


  </script>