@{
    Layout = "NavAndFooter";
}

@model HalloDoc_DAL.ViewModels.BusinessReqModel;

<div class="container-fluid mt-3 ">
    <div class="row justify-content-center">

        <div class="d-flex col-8 justify-content-end  mb-3 mt-2">
            <a class="nav-link" asp-controller="Home" asp-action="PatientRequest">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="FormByBusinessPartner" asp-controller="Home">
                <div class="container-fluid formContainer mb-5">

                    <!-- Business Partener Information Input Group -->

                    <div class="row mt-3">
                        <h4 class="mb-3 mt-3">Business Information</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="BusinessInfo.FirstName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Your First Name</label>
                                <span asp-validation-for="BusinessInfo.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="BusinessInfo.LastName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Your Last Name</label>
                                <span asp-validation-for="BusinessInfo.LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="BusinessInfo.PhoneNumber" type="tel" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Phone</label>
                                <span asp-validation-for="BusinessInfo.PhoneNumber" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="BusinessInfo.Email" type="email" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Your Email</label>
                                <span asp-validation-for="BusinessInfo.Email" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PropertyName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Business/Property Name</label>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="CaseNumber" type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Case Number (optional)</label>
                            </div>
                        </div>
                    </div>

                    <!-- Patient Information Input Group -->


                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Patient Information</h4>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea asp-for="PatientIfo.Symptoms" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Enter Brief Details of symptoms(optional)</label>
                                <span asp-validation-for="PatientIfo.Symptoms" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientIfo.FirstName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">First Name</label>
                                <span asp-validation-for="PatientIfo.FirstName" class="text-danger"></span>


                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientIfo.LastName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                                <span asp-validation-for="PatientIfo.LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientIfo.BirthDate" type="date" class="form-control" id="myDateInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Date Of Birth</label>
                                <span asp-validation-for="PatientIfo.BirthDate" class="text-danger"></span>

                            </div>
                        </div>
                    </div>

                    <!-- Patient Contact Information Input Group -->

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Contact Information</h4>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatientIfo.Email" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com"onblur="checkEmailAvailibility()">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="PatientIfo.Email" class="text-danger"></span>
                                
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="PatientIfo.Phonenumber" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                       id="floatingInput" onblur="checkPhoneNumberAvailibility()">
                                <label for="floatingInput"></label>
                                <span asp-validation-for="PatientIfo.Phonenumber" class="text-danger"></span>
                               
                            </div>
                        </div>
                    </div>


                    <!-- Patient Location Input Group -->

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Location</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatinentLocaiton.Street" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Street</label>
                                <span asp-validation-for="PatinentLocaiton.Street" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatinentLocaiton.City" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                <span asp-validation-for="PatinentLocaiton.City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <select id="regionInp" asp-for="PatinentLocaiton.State" class="form-select" aria-label="Default select example" style="height:3rem;padding:13px;">
                                    @for (int i = 0; i < Model.PatientIfo.regions.Count; i++)
                                    {
                                        <option value="@Model.PatientIfo.regions[i].Regionid">@Model.PatientIfo.regions[i].Name</option>
                                    }
                                </select>
                                <span asp-validation-for="PatinentLocaiton.State" class="text-danger"></span>
                                
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatinentLocaiton.ZipCode" type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                                <span asp-validation-for="PatinentLocaiton.ZipCode" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="PatinentLocaiton.RoomNo" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Room #/ Suite (optional)</label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Buttons  -->

                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit"
                                    class="btn btn-info  text-white darkInfo-btn">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-outline-info text-info lightInfo-btn">Cancel</button>
                        </div>
                    </div>

                </div>
            </form>


        </div>

    </div>
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script>
    $(document).ready(function () {

        var currentDate = new Date().toISOString().split('T')[0];


        document.getElementById('myDateInput').setAttribute('max', currentDate);
        $(".reg-nav").remove();

        toastr.remove();
        if ('@TempData["ShowPositiveNotification"]' != '') {

            toastr.success('@TempData["ShowPositiveNotification"]');
        }
        else if ('@TempData["ShowNegativeNotification"]' != '') {
            toastr.error('@TempData["ShowNegativeNotification"]')
        }

    })
</script>