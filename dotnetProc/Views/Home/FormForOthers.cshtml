




@model HalloDoc_DAL.ViewModels.PatientReq;

@{
    Layout = "NavAndFooter";
}




<div class="container-fluid mt-3">
    <div class="row justify-content-center">

        <div class="d-flex col-8 justify-content-end  mb-3 mt-2">
            <a asp-controller="Account" asp-action="DashBoard" class="nav-link">
                <button class="btn btn-outline-info text-info lightInfo-btn" type="button">
                    <i class="bi bi-chevron-left text-info lightInfo-btn "></i>Back
                </button>
            </a>
        </div>
        <div class="col-xl-8 col-lg-9 col-md-10 col-sm-11 col-12 ">


            <form asp-action="FormForOthers" method="post" enctype="multipart/form-data">
                <div class="container-fluid formContainer mb-5">
                    <div class="row mt-3">
                        <h4 class="mt-3 mb-3">Patient Information</h4>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Symptoms" class="form-control" placeholder="Leave a comment here"
                                          id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Enter Brief Details of symptoms(optional)</label>
                                <span asp-validation-for="Symptoms" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input asp-for="BirthDate" type="date" class="form-control" id="myDateInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Date Of Birth</label>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>

                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Contact Information</h4>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control emailInp" id="floatingInput"
                                       placeholder="name@example.com" onblur="checkEmailAvailibility()">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3 phoneInputDiv">
                                <input asp-for="Phonenumber" style='height: 57px;' type="tel" id='phonInput' class="form-control"
                                       id="floatingInput">
                                <label for="floatingInput"></label>
                                <span asp-validation-for="Phonenumber" class="text-danger"></span>

                            </div>
                        </div>

                    </div>

                    <div class="row mt-3">
                        <h4 class="mb-3">Patient Location</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.Street" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Street</label>
                                <span asp-validation-for="Location.Street" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.City" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">City</label>
                                <span asp-validation-for="Location.City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.State" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">State</label>
                                <span asp-validation-for="Location.State" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.ZipCode" type="number" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">

                                <label for="floatingInput">Zip Code</label>
                                <span asp-validation-for="Location.ZipCode" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Location.RoomNo" type="text" class="form-control" id="floatingInput"
                                       placeholder="name@example.com">
                                <label for="floatingInput">Room #/ Suite (optional)</label>
                            </div>
                        </div>


                    </div>

                    <div class="row mt-3">
                        <h4 class="mb-3">Relation</h4>
                        <div class="col-xl-6 col-sm-6 col-12">
                            <div class="form-floating mb-3">
                               <select asp-for="Relation" class="form-select form-select-sm" aria-label="Relation With Patient">
                                            <option  value="Family">Family</option>
                                            <option value="Concierge">Concierge</option>
                                            <option value="Business">Business</option>
                                </select>
                                <span asp-validation-for="Relation" class="text-danger"></span>

                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <h4 class="mb-3">(Optional) Upload Photo Or Document</h4>
                        <div class="col-12 ">
                            <div class="input-group mb-3">

                                <input asp-for="FileUpload" type="file" class="form-control" id="inputGroupFile02">
                                <label class="input-group-text bg-info text-white" for="inputGroupFile02">
                                    <i class='bi bi-cloud-upload text-white mx-1'></i>Upload
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-end p-3">
                        <div class="d-flex col-3 justify-content-end" style="column-gap: 1rem;">
                            <button type="submit" class="btn btn-info  text-white darkInfo-btn">Submit</button>
                            <button type="button" class="btn btn-outline-info text-info lightInfo-btn">
                                Cancle
                            </button>
                        </div>
                    </div>

                </div>
            </form>






        </div>

    </div>
</div>

<script>
 


    $(document).ready(function () {

        var currentDate = new Date().toISOString().split('T')[0];


        document.getElementById('myDateInput').setAttribute('max', currentDate);
        $(".reg-nav").remove();
    })



</script>

