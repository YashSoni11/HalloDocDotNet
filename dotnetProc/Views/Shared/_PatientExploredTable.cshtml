@model HalloDoc_DAL.ProviderViewModels.PatientExploreTable;
@using HalloDoc_DAL.AdminViewModels;



@{


    int k = 0;
    if (Model.patientRecords.Count != 0)
    {
        <table class="table ReqtableContainer">
            <thead>
                <tr style="background-color:#f1f1f1;">
                    <th class="reqtableHeader text-center" scope="col">Client/Member </th>
                    <th class="reqtableHeader text-center" scope="col">Created Date Name</th>
                    <th class="reqtableHeader text-center" scope="col">Confirmation</th>
                    <th class="reqtableHeader text-center" scope="col">Provider Name</th>
                    <th class="reqtableHeader text-center" scope="col">Conclude Date</th>
                    <th class="reqtableHeader text-center" scope="col">Status</th>
              
                    <th class="reqtableHeader text-center" scope="col">Actions</th>


                </tr>
            </thead>
            <tbody style="color:var(--pi-label-color);background: var(--pi-form-back-color);">


                @for (int i = 0; i < Model.patientRecords.Count; i++)
                {




                    <tr class="align-middle">
                        <td class="align-middle text-center">@Model.patientRecords[i].PatientName</td>
                        <td class="align-middle text-center">@Model.patientRecords[i].CreatedDate</td>
                        <td class="align-middle text-center">@(
                    Model.patientRecords[i].Confirmation == null ? "-" : Model.patientRecords[i].Confirmation
                    )</td>
                        <td class="align-middle text-center">@(
                    Model.patientRecords[i].Providername == null ? "-" : Model.patientRecords[i].Providername
                    )</td>
                        <td class="align-middle text-center">@(
                    Model.patientRecords[i].ConcludeDate == null ? "-" : Model.patientRecords[i].ConcludeDate
                    )</td>
                        <td class="align-middle text-center">@(
                    Model.patientRecords[i].status == null ? "-" : Model.patientRecords[i].status
                    )

                        <td class="align-middle text-center">


                            <div class="dropdown">
                                <button class="btn  btn-outline-info text-info lightInfo-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person mx-1"></i> Action
                                </button>
                                <ul class="dropdown-menu" style="background:var(--pi-form-back-color);">
                                    <li><a class=" btn dropdown-item" style="color:var(--pi-label-color)" asp-action="ViewRequest" asp-route-requestid="@Model.patientRecords[i].RequestId" asp-controller="Admindashboard">View Case</a></li>

                                    <li><a class="dropdown-item" style="color:var(--pi-label-color)" asp-action="ViewUploads" asp-route-id="@Model.patientRecords[i].RequestId" asp-controller="Admindashboard">View Uploads</a></li>
                                </ul>
                            </div>


                        </td>






                    </tr>
                }
            </tbody>

        </table>

        <div class="ProviderAccordian accordion" id="accordionExample mt-3">
            @for (int i = 0; i < Model.patientRecords.Count; i++)
            {

                <div class="accordion-item" style="background:var(--pi-form-back-color);">
                    <h2 class="accordion-header" id="heading@(k)">
                        <button class="accordion-button container-fluid" type="button" style="background:var(--accordian-btn-color);color:var(--pi-label-color);" data-bs-toggle="collapse" data-bs-target="#collapse@(
                k
                )" aria-expanded="true" aria-controls="collapse@(k)">
                            <div class="row" style="row-gap:1rem;">

                                <div class="col-12 d-flex" style="align-items:center;">
                                    <h4>@Model.patientRecords[k].PatientName</h4>
                                </div>
                                <div class="col-12">
                                    @Model.patientRecords[k].Confirmation
                                </div>

                            </div>

                        </button>
                    </h2>
                    <div id="collapse@(k)" class="accordion-collapse collapse" aria-labelledby="heading@(k)" data-bs-parent="#accordionExample">
                        <div class="accordion-body container-fluid">


                            <div class="row" style="row-gap:1rem;color:var(--pi-label-color);">

                                <div class="col-12">

                                    <span class="AccordianIcons mx-1"><i class="bi bi-person mx-1"></i></span>  Created Date: <span>@Model.patientRecords[k].CreatedDate</span>

                                </div>
                                <div class="col-12">
                                    <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Provider: <span>@Model.patientRecords[k].Providername</span>
                                </div>
                                <div class="col-12">
                                    <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Conclude Date: <span>@Model.patientRecords[k].ConcludeDate</span>
                                </div>
                                <div class="col-12">
                                    <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Status: <span>@Model.patientRecords[k].status</span>
                                </div>


                            </div>
                            <div class="row mt-3">
                                <div class="col-12 d-flex justify-content-center flex-column" style="row-gap:1rem;">

                                    <div >
                                        <a class="btn btn-outline-info text-info lightInfo-btn" style="color:var(--pi-label-color);width:100%;" asp-action="ViewRequest" asp-route-requestid="@Model.patientRecords[i].RequestId" asp-controller="Admindashboard">View Case</a>
                                    </div>

                                    <div>
                                        <a class="btn btn-outline-info text-info lightInfo-btn" style="color:var(--pi-label-color);width:100%;" asp-action="ViewUploads" asp-route-id="@Model.patientRecords[i].RequestId" asp-controller="Admindashboard">View Uploads</a>
                                    </div>


                                </div>
                            </div>







                        </div>
                    </div>
                </div>
                k++;
            }
        </div>

        <div class="row p-3">
            <nav aria-label="Page navigation example mt-3">
                <ul class="pagination justify-content-end PageNumbers" style="column-gap:1rem;">
                    <li class="page-item" onclick="GetPatientExploreTableView(@Model.currentPage-1,true, @Model.UserId,@Model.TotalPages)" style="cursor:pointer;background-color:var(--pi-form-back-color);color:var(--pi-label-color);"><i class="bi bi-chevron-left"></i></li>
                    <li class="page-item text-white" style="padding-left: 1rem;padding-right: 1rem;background-color:#0dcaf0;cursor:pointer;">@Model.currentPage</li>
                    <li class="page-item" onclick="GetPatientExploreTableView(@Model.currentPage+1,true,@Model.UserId,@Model.TotalPages)" style="cursor:pointer;background-color:var(--pi-form-back-color);color:var(--pi-label-color);"><i class="bi bi-chevron-right"></i></li>
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-7">
                <h4 class="alert alert-info fs-3  d-flex" role="alert" style="margin-top:7rem;justify-content:center;">
                    No Records Found!
                </h4>
            </div>
        </div>
    }
}


