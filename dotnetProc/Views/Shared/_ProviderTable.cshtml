@model HalloDoc_DAL.AdminViewModels.ProviderList;
@using HalloDoc_DAL.AdminViewModels;


@{
   
    string[] status = { "Active", "Pending", "deactive" };
    <form method="post" id="ProviderForm" asp-action="SaveProviderChanges" asp-controller="Admindashboard">





        <table class="table ReqtableContainer table-responsive">
            <thead>
                <tr style="background-color:#f1f1f1;">
                    <th class="reqtableHeader" scope="col">Stop Notification</th>
                    <th class="reqtableHeader" scope="col">Provider Name</th>
                    <th class="reqtableHeader" scope="col">Role</th>
                    <th class="reqtableHeader" scope="col">ON Call Status</th>
                    <th class="reqtableHeader" scope="col">Status</th>
                    <th class="reqtableHeader" scope="col">Action</th>
                </tr>
            </thead>
            <tbody style="color: var(--pi-label-color);background: var(--pi-form-back-color);">
           
                @for (int i = 0;i<Model.providers.Count;i++)
                {




                    <tr class="align-middle">
                    <td style="display:none"><input asp-for="@Model.providers[i].ProviderId" hidden  style="display:none;"/></td>
                        <th class="align-middle" scope="row"> <input class="form-check-input" type="checkbox" asp-for="@Model.providers[i].IsNoificationOn" onchange="handleNotificationChange('ProviderChangeSaveBtn')"></th>
                        <td class="align-middle">@Model.providers[i].Name</td>
                        <td class="align-middle">@Model.providers[i].Role</td>
                        <td class="align-middle">Un Available</td>
                        <td class="align-middle">
                            @status[Model.providers[i].status-1]
                        </td>
                        <td class="align-middle">


                            <button class="btn btn-outline-info text-info lightInfo-btn" onclick="()">
                                Contact
                            </button>
                            <a asp-action="ProviderProfile" asp-controller="Provider" asp-route-id="@Model.providers[i].ProviderId" class="btn btn-outline-info text-info lightInfo-btn" onclick="()">
                                Edit
                            </a>


                        </td>

                    </tr>
                }
            </tbody>
                
        </table>
        </form>

        <form method="post" id="mb-ProviderForm" asp-action="SaveProviderChanges" asp-controller="Admindashboard">


        <div class="ProviderAccordian accordion" id="accordionExample mt-3">

            @for(int k = 0; k < Model.providers.Count; k++)
            {

                <div class="accordion-item" style="background:var(--pi-form-back-color);">
                    <h2 class="accordion-header" id="heading@(k)">
                        <button class="accordion-button container-fluid" type="button" style="background:var(--accordian-btn-color);color:var(--pi-label-color);" data-bs-toggle="collapse" data-bs-target="#collapse@(k)" aria-expanded="true" aria-controls="collapse@(k)">
                            <div class="row" style="row-gap:1rem;">

                                <div class="col-12 d-flex" style="align-items:center;">
                                    <input asp-for="@Model.providers[k].ProviderId" hidden style="display:none;" />
                                    <input class="form-check-input my-0" type="checkbox" asp-for="@Model.providers[k].IsNoificationOn" onchange="handleNotificationChange('mb-ProviderChangeSaveBtn')"> <span class="mx-1">@Model.providers[k].Name</span>
                                </div>
                                <div class="col-12">
                                    On Call Status: <span >Unavailable</span>
                                </div>

                            </div>

                        </button>
                    </h2>
                    <div id="collapse@(k)" class="accordion-collapse collapse show" aria-labelledby="heading@(k)" data-bs-parent="#accordionExample">
                        <div class="accordion-body container-fluid">


                         <div class="row" style="row-gap:1rem;color:var(--pi-label-color);">
                            
                          <div class="col-12">

                                    <span class="AccordianIcons mx-1"><i class="bi bi-person mx-1"></i></span>  Role: <span>@Model.providers[k].Role</span>
                             
                          </div>
                          <div class="col-12">
                                    <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Status: <span>@status[Model.providers[k].status - 1]</span>
                          </div>
                            
                         </div>
                            <div class="row">
                                <div class="col-12 d-flex justify-content-end" style="column-gap:1rem;">

                                    <button class="btn btn-outline-info text-info lightInfo-btn" onclick="()">
                                        Contact
                                    </button>
                                    <a asp-action="ProviderProfile" asp-controller="Provider" asp-route-id="@Model.providers[k].ProviderId" class="btn btn-outline-info text-info lightInfo-btn" onclick="()">
                                        Edit
                                    </a>
             

                                </div>
                            </div>

                            <div class="row">

                                <div class="col-12">
                                    



                                </div>

                            </div>

                           

                            

                        </div>
                    </div>
                </div>

             




            }
        </div>


       

    </form>

    <div class="row p-3">
        <nav aria-label="Page navigation example mt-3">
            <ul class="pagination justify-content-end PageNumbers" style="column-gap:1rem;">
                <li class="page-item" onclick="GetProvidersByRegion(@Model.currentPage-1,@Model.TotalPages,true)" style="cursor:pointer;background-color:var(--pi-form-back-color);color:var(--pi-label-color);"><i class="bi bi-chevron-left"></i></li>
                <li class="page-item text-white" style="padding-left: 1rem;padding-right: 1rem;background-color:#0dcaf0;cursor:pointer;">@Model.currentPage</li>
                <li class="page-item" onclick="GetProvidersByRegion(@Model.currentPage+1,@Model.TotalPages,true)" style="cursor:pointer;background-color:var(--pi-form-back-color);color:var(--pi-label-color);"><i class="bi bi-chevron-right"></i></li>
            </ul>
        </nav>
    </div>
}


<script>

    //$("document").ready(function () {

    //    DisPlayPagination();

    //})

    
    const handleNotificationChange = (btnId) =>{

       
       if( $(`#${btnId}`).css("display") == "none"){
            $(`#${btnId}`).css("display", "block");
       }
    }


</script>