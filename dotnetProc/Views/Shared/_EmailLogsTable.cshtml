@model HalloDoc_DAL.ProviderViewModels.EmailLogsTable;
@using HalloDoc_DAL.AdminViewModels;



@{
    string[] accountTypes = { "Admin", "Physician", "Patient" };

    int k = 0;
    <table class="table ReqtableContainer">
        <thead>
            <tr style="background-color:#f1f1f1;">
                <th class="reqtableHeader text-center" scope="col">Recipient</th>
                <th class="reqtableHeader text-center" scope="col">Action</th>
                <th class="reqtableHeader text-center" scope="col">Role Name</th>
                <th class="reqtableHeader text-center" scope="col">Email Id</th>
                <th class="reqtableHeader text-center" scope="col">Create Date</th>
                <th class="reqtableHeader text-center" scope="col">Sent Date</th>
                <th class="reqtableHeader text-center" scope="col">Sent</th>
                <th class="reqtableHeader text-center" scope="col">Sent Tries</th>
                <th class="reqtableHeader text-center" scope="col">Confirmation Number</th>
               
            </tr>
        </thead>
        <tbody style="color:var(--pi-label-color);background: var(--pi-form-back-color);">


            @for (int i = 0; i < Model.EmailLogs.Count; i++)
            {




                <tr class="align-middle">
                    <td class="align-middle text-center">@Model.EmailLogs[i].Recipient</td>
                    <td class="align-middle text-center">@Model.EmailLogs[i].Action</td>
                    <td class="align-middle text-center">@Model.EmailLogs[i].RoleName</td>
                    <td class="align-middle text-center">@Model.EmailLogs[i].Email</td>
                    <td class="align-middle text-center">@Model.EmailLogs[i].CreateDate</td>
                    <td class="align-middle text-center">@Model.EmailLogs[i].SentDate</td>
                    <td class="align-middle text-center">@Model.EmailLogs[i].Sent</td>
                    <td class="align-middle text-center"></td>

                    <td class="align-middle text-center">@Model.EmailLogs[i].ConfirmationNumber</td>
                   



                </tr>
            }
        </tbody>

    </table>

    <div class="ProviderAccordian accordion" id="accordionExample mt-3">
        @for (int i = 0; i < Model.EmailLogs.Count; i++)
        {

            <div class="accordion-item" style="background:var(--pi-form-back-color);">
                <h2 class="accordion-header" id="heading@(k)">
                    <button class="accordion-button container-fluid" type="button" style="background:var(--accordian-btn-color);color:var(--pi-label-color);" data-bs-toggle="collapse" data-bs-target="#collapse@(k)" aria-expanded="true" aria-controls="collapse@(k)">
                        <div class="row" style="row-gap:1rem;">

                            <div class="col-12 d-flex" style="align-items:center;">
                                <h4>@Model.EmailLogs[k].Recipient</h4>
                            </div>
                            <div class="col-12">
                                 Action Name: <span>@Model.EmailLogs[k].Action</span>
                            </div>
                            <div class="col-12">
                               Email: <span>@Model.EmailLogs[k].Email</span>
                            </div>

                        </div>

                    </button>
                </h2>
                <div id="collapse@(k)" class="accordion-collapse collapse show" aria-labelledby="heading@(k)" data-bs-parent="#accordionExample">
                    <div class="accordion-body container-fluid">


                        <div class="row" style="row-gap:1rem;color:var(--pi-label-color);">

                            <div class="col-12">

                                <span class="AccordianIcons mx-1"><i class="bi bi-person mx-1"></i></span>  Role Name: <span>@Model.EmailLogs[k].RoleName</span>

                            </div>
                            <div class="col-12">
                                <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Created Date: <span>@Model.EmailLogs[k].CreateDate</span>
                            </div>
                            <div class="col-12">
                                <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Sent Date: <span>@Model.EmailLogs[k].SentDate</span>
                            </div>
                            <div class="col-12">
                                <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Sent Tries: <span>1</span>
                            </div>
                            <div class="col-12">
                                <span class="AccordianIcons mx-1"><i class="bi bi-check-lg mx-1"></i></span>  Confirmation Number: <span>@Model.EmailLogs[k].ConfirmationNumber</span>
                            </div>


                        </div>
                       







                    </div>
                </div>
            </div>
            k++;
        }
    </div>


    <div class="row p-3">
        <nav aria-label="Page navigation example mt-3">
            <ul class="pagination justify-content-end PageNumbers" style="column-gap:1rem;">
                <li class="page-item" onclick="GetAccountAccessTableView(@Model.currentPage-1,true,@Model.TotalPages)" style="cursor:pointer"><i class="bi bi-chevron-left"></i></li>
                <li class="page-item text-white" style="padding-left: 1rem;padding-right: 1rem;background-color:#0dcaf0;cursor:pointer;">@Model.currentPage</li>
                <li class="page-item" onclick="GetAccountAccessTableView(@Model.currentPage+1,true,@Model.TotalPages)" style="cursor:pointer;"><i class="bi bi-chevron-right"></i></li>
            </ul>
        </nav>
    </div>
}

