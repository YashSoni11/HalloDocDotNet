@model HalloDoc_DAL.ProviderViewModels.VendorTable;
@using HalloDoc_DAL.AdminViewModels;


@{







    <table class="table ReqtableContainer table-responsive">
        <thead>
            <tr style="background-color:#f1f1f1;">
                <th class="reqtableHeader" scope="col">Profession</th>
                <th class="reqtableHeader" scope="col">Business Name</th>
                <th class="reqtableHeader" scope="col">Email</th>
                <th class="reqtableHeader" scope="col">Fax Number</th>
                <th class="reqtableHeader" scope="col">Phone Number</th>
                <th class="reqtableHeader" scope="col">Business Contact</th>
                <th class="reqtableHeader" scope="col">Actions</th>
            </tr>
        </thead>
        <tbody style="color: var(--pi-label-color);background: var(--pi-form-back-color);">

            @for (int i = 0; i < Model.VendorList.Count; i++)
            {




                <tr class="align-middle">
                    <td style="display:none"></td>
                    <td class="align-middle">@Model.VendorList[i].Profession</td>

                    <td class="align-middle">@Model.VendorList[i].BusinessName</td>
                    <td class="align-middle">@Model.VendorList[i].Email</td>
                    <td class="align-middle">@Model.VendorList[i].FaxNumber</td>
                    <td class="align-middle">@Model.VendorList[i].PhoneNumber</td>
                    <td class="align-middle">@Model.VendorList[i].BusinessContact</td>


                    <td class="align-middle">


                <form method="post"  asp-action="DeleteVendor" asp-controller="Provider" asp-route-id="@Model.VendorList[i].VendorId">
                            <input asp-for="@Model.VendorList[i].VendorId" hidden style="display:none;" />
                        <button type="submit" class="btn btn-outline-info text-info lightInfo-btn">
                            Delete
                        </button>

                        <a asp-action="EditVendorView" asp-controller="Provider" asp-route-id="@Model.VendorList[i].VendorId" class="btn btn-outline-info text-info lightInfo-btn">
                            Edit
                        </a>
                </form>


                    </td>

                </tr>
            }
        </tbody>

    </table>

   


        <div class="ProviderAccordian accordion" id="mb-ProviderForm">

            @for (int k = 0; k < Model.VendorList.Count; k++)
            {

                <div class="accordion-item" style="background:var(--pi-form-back-color);">
                    <h2 class="accordion-header" id="heading@(k)">
                        <button class="accordion-button container-fluid" type="button" style="background:var(--accordian-btn-color);color:var(--pi-label-color);" data-bs-toggle="collapse" data-bs-target="#collapse@(k)" aria-expanded="true" aria-controls="collapse@(k)">
                            <div class="row" style="row-gap:1rem;">


                                <div class="col-12">
                                    @Model.VendorList[k].BusinessName
                                </div>

                            </div>

                        </button>
                    </h2>
                    <div id="collapse@(k)" class="accordion-collapse collapse" aria-labelledby="heading@(k)" data-bs-parent="#mb-ProviderForm">
                        <div class="accordion-body container-fluid">


                            <div class="row" style="row-gap:1rem;color:var(--pi-label-color);">

                                <div class="col-12">

                                    <span class="AccordianIcons mx-1"><i class="bi bi-envelope mx-1"></i></span>  Email: <span>@Model.VendorList[k].Email</span>

                                </div>
                                <div class="col-12">
                                    <span class="AccordianIcons mx-1"><i class="bi bi-telephone mx-1"></i></span>  Fax: <span>@Model.VendorList[k].FaxNumber</span>
                                </div>
                                <div class="col-12">
                                    <span class="AccordianIcons mx-1"><i class="bi bi-telephone mx-1"></i></span>  Phonenumber: <span>@Model.VendorList[k].PhoneNumber</span>
                                </div>
                                <div class="col-12">
                                    <span class="AccordianIcons mx-1"><i class="bi bi-envelope mx-1"></i></span>  Business Contact: <span>@Model.VendorList[k].BusinessContact</span>
                                </div>

                            </div>
                            <div class="row mt-3">
                                <div class="col-12 d-flex justify-content-end" style="column-gap:1rem;">

                                    <form method="post"  asp-action="DeleteVendor" asp-controller="Provider" asp-route-id="@Model.VendorList[k].VendorId">

                                        <button type="submit" class="btn btn-outline-info text-info lightInfo-btn">
                                            Delete
                                        </button>
                                    </form>
                                    <a asp-action="EditVendorView" asp-controller="Provider" asp-route-id="@Model.VendorList[k].VendorId" class="btn btn-outline-info text-info lightInfo-btn">
                                        Edit
                                    </a>


                                </div>
                            </div>



                        </div>
                    </div>
                </div>






            }
        </div>




    

    <div class="row p-3">
        <nav aria-label="Page navigation example mt-3">
            <ul class="pagination justify-content-end PageNumbers" style="column-gap:1rem;">
                <li class="page-item" onclick="GetVendorsTableView(@Model.currentPage-1,true,@Model.TotalPages)" style="cursor:pointer"><i class="bi bi-chevron-left"></i></li>
                <li class="page-item text-white" style="padding-left: 1rem;padding-right: 1rem;background-color:#0dcaf0;cursor:pointer;">@Model.currentPage</li>
                <li class="page-item" onclick="GetVendorsTableView(@Model.currentPage+1,true,@Model.TotalPages)" style="cursor:pointer;"><i class="bi bi-chevron-right"></i></li>
            </ul>
        </nav>
    </div>
}


