@model HalloDoc_DAL.InvoicingViewModels.ShiftTimeSheetsModel;


@{
   

    if (Model.ShiftTimeSheets.Count != 0)
    {

        <table class="table ReqtableContainer">
            <thead>
                <tr style="background-color:#f1f1f1;">
                    <th class="reqtableHeader text-center" scope="col">Shift Date</th>
                    <th class="reqtableHeader text-center" scope="col">Shift</th>
                    <th class="reqtableHeader text-center" scope="col">Nightshift Weekend</th>
                    <th class="reqtableHeader text-center" scope="col">Housecall</th>
                    <th class="reqtableHeader text-center" scope="col">Housecall Nights Weekend</th>
                    <th class="reqtableHeader text-center" scope="col">Phone Consults</th>
                    <th class="reqtableHeader text-center" scope="col">Phone Consults Nights Weekend</th>
                    <th class="reqtableHeader text-center" scope="col">Batch Testing Nights Weekend</th>
                </tr>
            </thead>
            <tbody style="color:var(--pi-label-color);background: var(--pi-form-back-color);">


                @for (int i = 0; i < Model.ShiftTimeSheets.Count; i++)
                {




                    <tr class="align-middle">
                        <td>@Model.ShiftTimeSheets[i].ShiftDate.ToString("MMM d,yyyy")</td>
                        <td>@Model.ShiftTimeSheets[i].ShiftNo</td>
                        <td>@Model.ShiftTimeSheets[i].NightShiftWeekend</td>
                        <td>@Model.ShiftTimeSheets[i].HouseCall</td>
                        <td>@Model.ShiftTimeSheets[i].HouseCallNightsWeekend</td>
                        <td>@Model.ShiftTimeSheets[i].PhoneConsults</td>
                        <td>@Model.ShiftTimeSheets[i].PhoneConsultNightsWeekend</td>
                        <td>@Model.ShiftTimeSheets[i].BatchTesing</td>
                       

                    </tr>
                }
            </tbody>

        </table>

       

    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-7">
                <h4 class="alert alert-info fs-3  d-flex" role="alert" style="margin-top:7rem;justify-content:center;">
                    No Records Found!
                </h4>
            </div>
        </div>
    }
}

