<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnetProc</title>
    <link rel="stylesheet" href="~/css/common.style.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/patient.login.style.css">
    <link rel="stylesheet" href="~/css/patientSubmit.style.css">
    <link rel="stylesheet" href="~/css/familyFreindRequest.style.css">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css'>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/css/intlTelInput.css">

</head>
<body>


    <!-- Button trigger modal -->
    <button style="display: none;" type="button" id='modalBtn' class="btn btn-primary" data-bs-toggle="modal"
            data-bs-target="#exampleModal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
         aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" data-backdrop="true">
            <div style="border-radius: 20px;" class="modal-content">
                <div style='border:none;' class="modal-header  d-flex justify-content-center flex-column">
                    <!-- <i style="color: yellow;" class="bi bi-exclamation-circle-fill"></i> -->
                    <img style="width: 5rem;" src="~/images/exclamation-circle-fill.svg" />
                    <h4 class="mt-4">Information</h4>
                </div>
                <div style='text-align: center;' class="modal-body text-align-center">

                    When submitting a request, you must provide the correct
                    contact information for the patient or the responsibly
                    party. Failure to provide the correct email and phone
                    number will delay service or be declined.

                </div>
                <div style='border:none;' class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-info text-white" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>



    <nav class="navbar">
        <div class="container-fluid">
            <img class="img-fluid" style="height: 5rem;" src="~/images/trans_logo.png" />
            <button style="width: 3rem; height: 3rem;" type="button" class="btn btn-outline-info lightInfo-btn "
                    onclick="changeTheme()">
                <i id='themeIcon' class="bi bi-moon text-info"></i>
            </button>
        </div>
    </nav>




    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="patientSubmitFooter">
        <span>Terms and Conditions</span>
        <span>|</span>
        <span>Privacy Policy</span>
    </footer>


    <script src="~/lib//jquery//dist//jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/intlTelInput.min.js"></script>
    <script>
        const input = document.querySelector("#phonInput");
        window.intlTelInput(input, {
            utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/utils.js",
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/custome.js"></script>
</body>
</html>
